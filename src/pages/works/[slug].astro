    font-size: 0.9375rem;
    color: #222;
    margin: 0;
    text-align: right;
  }

  .spec-price dd {
    font-size: 1.5rem;
    font-weight: 600;
    letter-spacing: -0.02em;
  }

  .cta-block {
    padding-top: 0.5rem;
  }

  /* ========================================
     GALLERY SECTION
     ======================================== */
  .gallery-section {
    padding: 0 0 6rem;
    background: #fff;
  }

