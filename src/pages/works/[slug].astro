---
import Layout from "@layouts/Layout.astro";
import SectionContainer from "@components/SectionContainer.astro";
import ContactBanner from "@components/Hero/ContactBanner.astro";
import ImageModal from "@components/ImageModal.astro";
import { WORKS } from "@data/works";
import { resolveImage, processImageUrl } from "@utils/images";
import { Image } from "astro:assets";

// Importar todas las im√°genes de ceramics para detectar autom√°ticamente
const allCeramicImages = import.meta.glob<{ default: ImageMetadata }>(
  '/src/assets/works/ceramics/**/*.{avif,jpg,jpeg,png}',
  { eager: true }
);

// Importar todas las im√°genes de artistBooks para detectar autom√°ticamente
const allArtistBookImages = import.meta.glob<{ default: ImageMetadata }>(
  '/src/assets/works/artistBooks/**/*.{avif,jpg,jpeg,png}',
  { eager: true }
);

// Funci√≥n para obtener im√°genes de una obra espec√≠fica
function getWorkImages(categorySlug: string, workSlug: string): ImageMetadata[] {
  const images: ImageMetadata[] = [];
  
  if (categorySlug === 'ceramics') {
    for (const [path, imageModule] of Object.entries(allCeramicImages)) {
      const normalizedPath = path.toLowerCase();
      const searchPattern = `/ceramics/${workSlug.toLowerCase()}/`;
      const searchPatternWin = `\\ceramics\\${workSlug.toLowerCase()}\\`;
      
      if (normalizedPath.includes(searchPattern) || normalizedPath.includes(searchPatternWin)) {
        images.push(imageModule.default);
      }
    }
  } else if (categorySlug === 'artist-books') {
    for (const [path, imageModule] of Object.entries(allArtistBookImages)) {
      const folderMap: Record<string, string> = {
        'contemporary-street-alphabet-1': 'contemporarystreetalphabet',
        'crack-progress-charlies-progress-1': 'crackprogresscharliesprogress',
        'future-1': 'future',
        'gods-monsters-1': 'godsmonsters',
        'journeyman-1': 'thejourneyman',
        'modern-marriage-1': 'modernmarriage',
        'run-1': 'run'
      };
      
      const folderName = folderMap[workSlug.toLowerCase()];
      const normalizedPath = path.toLowerCase();
      
      if (folderName && (normalizedPath.includes(`/artistbooks/${folderName}/`) || normalizedPath.includes(`\\artistbooks\\${folderName}\\`))) {
        images.push(imageModule.default);
      }
    }
  }
  
  return images.sort((a, b) => a.src.localeCompare(b.src));
}

export async function getStaticPaths() {
  const paths = [];

  for (const category of WORKS) {
    if (category.works) {
      for (const work of category.works) {
        paths.push({
          params: { slug: work.slug },
          props: {
            work,
            categorySlug: category.slug,
            categoryTitle: category.title
          }
        });
      }
    }

    if (category.collections) {
      for (const collection of category.collections) {
        for (const work of collection.works) {
          paths.push({
            params: { slug: work.slug },
            props: {
              work,
              categorySlug: category.slug,
              categoryTitle: category.title,
              collectionSlug: collection.slug,
              collectionTitle: collection.title
            }
          });
        }
      }
    }
  }

  return paths;
}

export const prerender = true;

const { work, categorySlug, categoryTitle, collectionSlug, collectionTitle } = Astro.props;

const detectedImageMetas = (categorySlug === 'ceramics' || categorySlug === 'artist-books') 
  ? getWorkImages(categorySlug, work.slug)
  : [];

const hasDetectedImages = detectedImageMetas.length > 0;
const allImageMetas = hasDetectedImages 
  ? detectedImageMetas 
  : work?.imageUrls?.map(url => resolveImage(url)).filter(Boolean) as ImageMetadata[] || [];

const mainImageMeta = allImageMetas[0];
const mainImageSrc = mainImageMeta?.src || '';
const hasMultipleImages = allImageMetas.length > 1;
const additionalImageMetas = allImageMetas.slice(1);
const additionalImagesCount = additionalImageMetas.length;
const galleryColCount = Math.min(Math.max(additionalImagesCount, 2), 4);

const relatedWorks = [];
for (const category of WORKS) {
  if (category.slug === categorySlug) {
    if (collectionSlug && category.collections) {
      const collection = category.collections.find(c => c.slug === collectionSlug);
      if (collection) {
        relatedWorks.push(...collection.works.filter(w => w.slug !== work.slug).slice(0, 4));
      }
    } else if (category.works) {
      relatedWorks.push(...category.works.filter(w => w.slug !== work.slug).slice(0, 4));
    }
    break;
  }
}

const pageTitle = `${work?.title || 'Work'} | Fernando Feijoo`;
const pageDescription = work?.description?.trim()
  ? work.description.substring(0, 160)
  : `${work?.title} - ${work?.printType || 'Artwork'} by Fernando Feijoo`;
const ogImage = mainImageSrc || '/favicon.png';

const backLink = collectionSlug
  ? `/works/${categorySlug}/${collectionSlug}`
  : `/works/${categorySlug}`;
const backLabel = collectionTitle || categoryTitle;
---

<Layout
  title={pageTitle}
  description={pageDescription}
  image={ogImage}
>
  <SectionContainer id="work-detail">
    <main class="work-page">
      {work ? (
        <>
          {/* Elegant Navigation */}
          <nav class="work-nav">
            <div class="nav-inner">
              <a href={backLink} class="nav-back">
                <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                  <path d="M19 12H5M12 19l-7-7 7-7"/>
                </svg>
                <span>Back to {backLabel}</span>
              </a>
              <div class="nav-path">
                <span class="path-segment"><a href="/">Home</a></span>
                <span class="path-divider">/</span>
                <span class="path-segment"><a href="/works">Works</a></span>
                <span class="path-divider">/</span>
                <span class="path-segment active">{work.title}</span>
              </div>
            </div>
          </nav>

          {/* Main Content - Editorial Layout */}
          <article class="work-content">
            {/* Hero Section */}
            <div class="work-hero">
              <div class="hero-image-wrapper">
                <div class="image-frame">
                  <div class="frame-decoration top-left"></div>
                  <div class="frame-decoration top-right"></div>
                  <div class="frame-decoration bottom-left"></div>
                  <div class="frame-decoration bottom-right"></div>
                  
                  <div class="image-container">
                    {mainImageMeta ? (
                      <Image
                        id="main-work-image"
                        src={mainImageMeta}
                        alt={work.title}
                        class="hero-image"
                        loading="eager"
                        data-images={JSON.stringify(allImageMetas.map(m => m.src))}
                      />
                    ) : mainImageSrc ? (
                      <img
                        id="main-work-image"
                        src={mainImageSrc}
                        alt={work.title}
                        class="hero-image"
                        loading="eager"
                        fetchpriority="high"
                        decoding="async"
                        data-images={JSON.stringify(allImageMetas.map(m => m.src))}
                      />
                    ) : (
                      <div class="image-placeholder">
                        <span>{work.title}</span>
                      </div>
                    )}
                    
                    <button class="expand-trigger" aria-label="Expand image">
                      <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M15 3h6v6M9 21H3v-6M21 3l-7 7M3 21l7-7"/>
                      </svg>
                    </button>
                  </div>
                </div>

                {hasMultipleImages && (
                  <div class="image-indicator">
                    <span class="indicator-current">01</span>
                    <div class="indicator-bar">
                      <div class="indicator-progress" style={`width: ${100 / allImageMetas.length}%`}></div>
                    </div>
                    <span class="indicator-total">{String(allImageMetas.length).padStart(2, '0')}</span>
                  </div>
                )}
              </div>

              <div class="hero-info">
                <header class="info-header">
                  <div class="info-eyebrow">
                    <span class="eyebrow-line"></span>
                    <span class="eyebrow-text">{collectionTitle || categoryTitle}</span>
                  </div>
                  
                  <h1 class="info-title">{work.title}</h1>
                  
                  {work.description && (
                    <p class="info-description">{work.description}</p>
                  )}
                </header>

                <div class="info-specs">
                  <div class="spec-list">
                    <div class="spec-item">
                      <span class="spec-label">Medium</span>
                      <span class="spec-value">{work.printType || 'Mixed media'}</span>
                    </div>
                    
                    {work.size && (
                      <div class="spec-item">
                        <span class="spec-label">Dimensions</span>
                        <span class="spec-value">{work.size}</span>
                      </div>
                    )}
                    
                    {work.printEdition && (
                      <div class="spec-item">
                        <span class="spec-label">Edition</span>
                        <span class="spec-value">{work.printEdition}</span>
                      </div>
                    )}
                    
                    {work.price && (
                      <div class="spec-item spec-highlight">
                        <span class="spec-label">Price</span>
                        <span class="spec-value">{work.price}</span>
                      </div>
                    )}
                  </div>
                </div>

                <div class="info-cta">
                  <a 
                    href={`mailto:info@fernandofeijoo.com?subject=Inquiry: ${encodeURIComponent(work.title)}`}
                    class="cta-primary"
                  >
                    <span>Inquire about this work</span>
                    <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                      <path d="M5 12h14M12 5l7 7-7 7" stroke-linecap="round" stroke-linejoin="round"/>
                    </svg>
                  </a>
                  <a href="/contact" class="cta-secondary">
                    <span>Visit studio</span>
                  </a>
                </div>
              </div>
            </div>

            {/* Gallery Section */}
            {additionalImagesCount > 0 && (
              <section class="work-gallery">
                <div class="section-header">
                  <div class="section-eyebrow">
                    <span class="eyebrow-line"></span>
                    <span class="eyebrow-text">Gallery</span>
                  </div>
                  <h2 class="section-title">Additional Views</h2>
                </div>
                
                <div class="gallery-grid" style={`--cols: ${galleryColCount}`}>
                  {additionalImageMetas.map((meta, index) => (
                    <figure class="gallery-item" data-index={index + 1}>
                      <div class="gallery-image-container">
                        <Image
                          src={meta}
                          alt={`${work.title} - View ${index + 2}`}
                          class="gallery-image"
                        />
                        <div class="gallery-overlay">
                          <div class="gallery-expand-icon">
                            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                              <path d="M15 3h6v6M9 21H3v-6M21 3l-7 7M3 21l7-7"/>
                            </svg>
                          </div>
                        </div>
                      </div>
                      <figcaption class="gallery-caption">
                        <span class="caption-number">{String(index + 2).padStart(2, '0')}</span>
                      </figcaption>
                    </figure>
                  ))}
                </div>
              </section>
            )}

            {/* Related Works */}
            {relatedWorks.length > 0 && (
              <section class="work-related">
                <div class="section-header">
                  <div class="section-eyebrow">
                    <span class="eyebrow-line"></span>
                    <span class="eyebrow-text">Explore</span>
                  </div>
                  <div class="section-title-row">
                    <h2 class="section-title">More from {collectionTitle || categoryTitle}</h2>
                    <a href={backLink} class="view-all-link">
                      <span>View all</span>
                      <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M5 12h14M12 5l7 7-7 7" stroke-linecap="round" stroke-linejoin="round"/>
                      </svg>
                    </a>
                  </div>
                </div>

                <div class="related-grid">
                  {relatedWorks.map((relatedWork, index) => {
                    const relatedUrl = relatedWork.imageUrls?.[0] || "";
                    const relatedMeta = resolveImage(relatedUrl);
                    const relatedSrc = processImageUrl(relatedUrl);

                    return (
                      <a href={`/works/${relatedWork.slug}`} class="related-card">
                        <div class="related-image-wrapper">
                          {relatedMeta ? (
                            <Image
                              src={relatedMeta}
                              alt={relatedWork.title}
                              width={400}
                              height={400}
                              loading="lazy"
                              decoding="async"
                              class="related-image"
                            />
                          ) : relatedSrc ? (
                            <img
                              src={relatedSrc}
                              alt={relatedWork.title}
                              width="400"
                              height="400"
                              loading="lazy"
                              decoding="async"
                              class="related-image"
                            />
                          ) : (
                            <div class="related-fallback">{relatedWork.title}</div>
                          )}
                          <div class="related-hover-overlay">
                            <div class="related-hover-content">
                              <span class="related-number">{String(index + 1).padStart(2, "0")}</span>
                              <h3 class="related-title-text">{relatedWork.title}</h3>
                            </div>
                          </div>
                        </div>
                      </a>
                    );
                  })}
                </div>
              </section>
            )}
          </article>
        </>
      ) : (
        <section class="not-found">
          <span class="not-found-icon">üñºÔ∏è</span>
          <h1>Work Not Found</h1>
          <p>The work you're looking for doesn't exist or has been moved.</p>
        </section>
      )}

      <ContactBanner />
    </main>
  </SectionContainer>

  <ImageModal id="imageModal" />

  <script type="application/ld+json" is:inline set:html={JSON.stringify(
    (() => {
      const schema: Record<string, unknown> = {
        "@context": "https://schema.org",
        "@type": "VisualArtwork",
        "name": work?.title,
        "image": allImageMetas.map(m => `https://fernando-feijoo.com${m.src}`),
        "description": work?.description,
        "creator": {
          "@type": "Person",
          "name": "Fernando Feijoo",
          "url": "https://fernando-feijoo.com"
        },
        "artist": {
          "@type": "Person",
          "name": "Fernando Feijoo"
        },
        "artMedium": work?.printType,
        "artform": categoryTitle,
        "width": work?.size
      };

      if (work?.price) {
        schema.offers = {
          "@type": "Offer",
          "price": work.price.replace(/[^0-9.]/g, ''),
          "priceCurrency": "GBP",
          "availability": "https://schema.org/InStock",
          "url": `https://fernando-feijoo.com/works/${work?.slug}`
        };
      }

      return schema;
    })()
  )} />

  <script is:inline>
    // Initialize everything when DOM is ready
    function initWorkPage() {
      // Get fresh references to elements
      const mainImage = document.getElementById('main-work-image');
      const expandTrigger = document.querySelector('.expand-trigger');
      const galleryItems = document.querySelectorAll('.gallery-item');

      // Open modal function
      function openModal(index) {
        const imagesData = mainImage?.getAttribute('data-images');
        if (!imagesData) return;
        
        try {
          const images = JSON.parse(imagesData);
          if (window.imageModal?.openModal) {
            window.imageModal.openModal(images, index);
          }
        } catch (e) {
          console.error('Error opening modal:', e);
        }
      }

      // Remove existing listeners first (to prevent duplicates)
      if (mainImage) {
        mainImage.replaceWith(mainImage.cloneNode(true));
        const freshMainImage = document.getElementById('main-work-image');
        freshMainImage?.addEventListener('click', () => openModal(0));
      }

      // Expand button
      const freshExpandBtn = document.querySelector('.expand-trigger');
      freshExpandBtn?.addEventListener('click', function(e) {
        e.stopPropagation();
        openModal(0);
      });

      // Gallery items
      document.querySelectorAll('.gallery-item').forEach(function(item) {
        item.addEventListener('click', function() {
          const idx = parseInt(item.getAttribute('data-index') || '0');
          openModal(idx);
        });
      });
    }

    // Run on initial load
    if (document.readyState === 'loading') {
      document.addEventListener('DOMContentLoaded', initWorkPage);
    } else {
      initWorkPage();
    }

    // Re-run after view transitions
    document.addEventListener('astro:page-load', initWorkPage);
    document.addEventListener('astro:after-swap', initWorkPage);
  </script>
</Layout>

<style>
  /* ========================================
     BASE & VARIABLES
     ======================================== */
  .work-page {
    --color-bg: #ffffff;
    --color-surface: #f8f8f8;
    --color-surface-elevated: #ffffff;
    --color-border: #e5e5e5;
    --color-border-light: #f0f0f0;
    --color-text: #0a0a0a;
    --color-text-secondary: #525252;
    --color-text-muted: #737373;
    --color-accent: #000000;
    
    --ease-smooth: cubic-bezier(0.4, 0, 0.2, 1);
    --ease-out: cubic-bezier(0.16, 1, 0.3, 1);
    --ease-spring: cubic-bezier(0.34, 1.56, 0.64, 1);
    
    --shadow-sm: 0 1px 2px 0 rgb(0 0 0 / 0.05);
    --shadow-md: 0 4px 6px -1px rgb(0 0 0 / 0.1), 0 2px 4px -2px rgb(0 0 0 / 0.1);
    --shadow-lg: 0 10px 15px -3px rgb(0 0 0 / 0.1), 0 4px 6px -4px rgb(0 0 0 / 0.1);
    --shadow-xl: 0 20px 25px -5px rgb(0 0 0 / 0.1), 0 8px 10px -6px rgb(0 0 0 / 0.1);
    
    width: 100%;
    background: var(--color-bg);
  }

  /* ========================================
     NAVIGATION
     ======================================== */
  .work-nav {
    padding: 1.5rem 1.5rem 1rem;
    max-width: 1600px;
    margin: 0 auto;
  }

  @media (min-width: 768px) {
    .work-nav {
      padding: 2rem 3rem 1.5rem;
    }
  }

  .nav-inner {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    padding-bottom: 1.5rem;
    border-bottom: 1px solid var(--color-border-light);
  }

  @media (min-width: 640px) {
    .nav-inner {
      flex-direction: row;
      justify-content: space-between;
      align-items: center;
    }
  }

  .nav-back {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.875rem;
    font-weight: 500;
    color: var(--color-text-secondary);
    text-decoration: none;
    transition: color 0.2s var(--ease-smooth);
  }

  .nav-back:hover {
    color: var(--color-text);
  }

  .nav-back svg {
    transition: transform 0.2s var(--ease-out);
  }

  .nav-back:hover svg {
    transform: translateX(-3px);
  }

  .nav-path {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.8125rem;
    color: var(--color-text-muted);
  }

  .path-segment a {
    color: var(--color-text-secondary);
    text-decoration: none;
    transition: color 0.2s var(--ease-smooth);
  }

  .path-segment a:hover {
    color: var(--color-text);
  }

  .path-segment.active {
    color: var(--color-text);
    font-weight: 500;
  }

  .path-divider {
    color: var(--color-border);
  }

  /* ========================================
     WORK CONTENT - Editorial Layout
     ======================================== */
  .work-content {
    max-width: 1600px;
    margin: 0 auto;
  }

  /* ========================================
     HERO SECTION
     ======================================== */
  .work-hero {
    display: grid;
    gap: 3rem;
    padding: 2rem 1.5rem 4rem;
  }

  @media (min-width: 1024px) {
    .work-hero {
      grid-template-columns: 1.2fr 0.8fr;
      gap: 4rem;
      padding: 3rem 3rem 6rem;
      align-items: start;
    }
  }

  /* Hero Image */
  .hero-image-wrapper {
    position: sticky;
    top: 2rem;
  }

  .image-frame {
    position: relative;
    background: var(--color-surface);
    padding: 1rem;
    box-shadow: var(--shadow-lg);
  }

  @media (min-width: 768px) {
    .image-frame {
      padding: 1.5rem;
    }
  }

  /* Frame Corner Decorations */
  .frame-decoration {
    position: absolute;
    width: 20px;
    height: 20px;
    border: 2px solid var(--color-text);
    opacity: 0.15;
    transition: opacity 0.4s var(--ease-out);
  }

  .top-left { top: 0.5rem; left: 0.5rem; border-right: none; border-bottom: none; }
  .top-right { top: 0.5rem; right: 0.5rem; border-left: none; border-bottom: none; }
  .bottom-left { bottom: 0.5rem; left: 0.5rem; border-right: none; border-top: none; }
  .bottom-right { bottom: 0.5rem; right: 0.5rem; border-left: none; border-top: none; }

  .image-frame:hover .frame-decoration {
    opacity: 0.4;
  }

  .image-container {
    position: relative;
    background: var(--color-surface-elevated);
    overflow: hidden;
  }

  .hero-image {
    width: 100%;
    height: auto;
    display: block;
    cursor: zoom-in;
    transition: transform 0.7s var(--ease-out);
  }

  .image-container:hover .hero-image {
    transform: scale(1.02);
  }

  .image-placeholder {
    aspect-ratio: 1;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.25rem;
    color: var(--color-text-muted);
    background: var(--color-surface);
  }

  .expand-trigger {
    position: absolute;
    bottom: 1rem;
    right: 1rem;
    width: 52px;
    height: 52px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--color-accent);
    border: none;
    color: white;
    cursor: pointer;
    opacity: 0;
    transform: translateY(10px);
    transition: all 0.4s var(--ease-out);
    box-shadow: var(--shadow-md);
  }

  .image-container:hover .expand-trigger {
    opacity: 1;
    transform: translateY(0);
  }

  .expand-trigger:hover {
    transform: scale(1.08);
    box-shadow: var(--shadow-lg);
  }

  /* Image Indicator */
  .image-indicator {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    margin-top: 1.5rem;
    padding: 0 0.5rem;
  }

  .indicator-current, .indicator-total {
    font-family: 'Exo', system-ui, sans-serif;
    font-size: 0.875rem;
    font-weight: 500;
    color: var(--color-text-muted);
    min-width: 1.5rem;
  }

  .indicator-current {
    color: var(--color-text);
  }

  .indicator-bar {
    flex: 1;
    height: 2px;
    background: var(--color-border);
    border-radius: 1px;
    overflow: hidden;
  }

  .indicator-progress {
    height: 100%;
    background: var(--color-text);
    transition: width 0.4s var(--ease-out);
  }

  /* ========================================
     HERO INFO
     ======================================== */
  .hero-info {
    display: flex;
    flex-direction: column;
    gap: 2.5rem;
  }

  @media (min-width: 1024px) {
    .hero-info {
      padding-top: 1rem;
    }
  }

  .info-header {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .info-eyebrow {
    display: flex;
    align-items: center;
    gap: 0.75rem;
  }

  .eyebrow-line {
    width: 40px;
    height: 1px;
    background: var(--color-text);
  }

  .eyebrow-text {
    font-size: 0.75rem;
    font-weight: 600;
    letter-spacing: 0.2em;
    text-transform: uppercase;
    color: var(--color-text-muted);
  }

  .info-title {
    font-size: clamp(2.5rem, 6vw, 4.5rem);
    font-weight: 400;
