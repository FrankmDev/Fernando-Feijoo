    grid-template-columns: repeat(2, 1fr);
    gap: 2px;
  }

  .gallery-card {
    margin: 0;
    cursor: pointer;
  }

  .gallery-card-inner {
    position: relative;
    aspect-ratio: 1;
    overflow: hidden;
    background: #0a0a0a;
  }

  .gallery-img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: 
      transform 1s cubic-bezier(0.16, 1, 0.3, 1),
      opacity 0.6s ease;
  }

  .gallery-card:hover .gallery-img {
    transform: scale(1.15);
    opacity: 0.5;
  }

  .gallery-hover {
    position: absolute;
    inset: 0;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: 1rem;
    opacity: 0;
    transition: opacity 0.5s ease;
  }

  .gallery-card:hover .gallery-hover {
    opacity: 1;
  }

  .gallery-number {
    font-size: 0.6875rem;
    font-weight: 600;
    letter-spacing: 0.2em;
    color: rgba(255, 255, 255, 0.6);
  }

  .gallery-hover svg {
    color: #fff;
  }

  /* ========================================
     RELATED SECTION
     ======================================== */
  .related-section {
    padding: 6rem 1rem;
    background: #fafafa;
  }

  .related-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    max-width: 1280px;
    margin: 0 auto 3rem;
  }

  .related-title {
    font-size: clamp(1.25rem, 3vw, 1.75rem);
    font-weight: 500;
    letter-spacing: -0.02em;
    color: #000;
    margin: 0;
  }

  .related-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.75rem;
    font-weight: 500;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    color: #666;
    text-decoration: none;
    transition: color 0.2s ease;
  }

