  .artwork-frame {
    position: relative;
  }

  .artwork-container {
    position: relative;
    background: #fff;
    box-shadow: 
      0 25px 50px -12px rgba(0, 0, 0, 0.15),
      0 0 0 1px rgba(0, 0, 0, 0.03);
    overflow: hidden;
  }

  .artwork-image {
    width: 100%;
    height: auto;
    display: block;
    cursor: pointer;
    transition: transform 0.8s cubic-bezier(0.16, 1, 0.3, 1);
