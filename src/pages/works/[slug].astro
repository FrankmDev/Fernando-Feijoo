---
import Layout from "@layouts/Layout.astro";
import SectionContainer from "@components/SectionContainer.astro";
import ContactBanner from "@components/Hero/ContactBanner.astro";
import WorkCard from "@components/WorkCard.astro";
import Cta from "@components/Cta.astro";
import ImageModal from "@components/ImageModal.astro";
import { WORKS } from "@data/works";
import { processImageUrls, resolveImage, processImageUrl } from "@utils/images";
import { Image } from "astro:assets";


export async function getStaticPaths() {
  const paths = [];

  for (const category of WORKS) {
    if (category.works) {
      for (const work of category.works) {
        paths.push({
          params: { slug: work.slug },
          props: {
            work,
            categorySlug: category.slug,
            categoryTitle: category.title
          }
        });
      }
    }

    if (category.collections) {
      for (const collection of category.collections) {
        for (const work of collection.works) {
          paths.push({
            params: { slug: work.slug },
            props: {
              work,
              categorySlug: category.slug,
              categoryTitle: category.title,
              collectionSlug: collection.slug,
              collectionTitle: collection.title
            }
          });
        }
      }
    }
  }

  return paths;
}

export const prerender = true;

const { work, categorySlug, categoryTitle, collectionSlug, collectionTitle } = Astro.props;

const processedImageUrls = work?.imageUrls ? processImageUrls(work.imageUrls) : [];
const mainImageUrl = work?.imageUrls?.[0];
const mainImageMeta = resolveImage(mainImageUrl);
const mainImageSrc = processedImageUrls[0] || '';

const hasMultipleImages = processedImageUrls.length > 1;
const galleryImages = hasMultipleImages ? processedImageUrls : [];
const galleryColCount = Math.min(galleryImages.length, 4);

// Find related works
const relatedWorks = [];
for (const category of WORKS) {
  if (category.slug === categorySlug) {
    if (collectionSlug && category.collections) {
      const collection = category.collections.find(c => c.slug === collectionSlug);
      if (collection) {
        relatedWorks.push(...collection.works.filter(w => w.slug !== work.slug).slice(0, 6));
      }
    } else if (category.works) {
      relatedWorks.push(...category.works.filter(w => w.slug !== work.slug).slice(0, 6));
    }
    break;
  }
}

// SEO
const pageTitle = `${work?.title || 'Work'} | Fernando Feijoo`;
const pageDescription = work?.description?.trim()
  ? work.description.substring(0, 160)
  : `${work?.title} - ${work?.medium || 'Artwork'} by Fernando Feijoo`;
const ogImage = mainImageSrc || '/favicon.png';

const backLink = collectionSlug
  ? `/works/${categorySlug}/${collectionSlug}`
  : `/works/${categorySlug}`;
const backLabel = collectionTitle || categoryTitle;
---

<Layout
  title={pageTitle}
  description={pageDescription}
  image={ogImage}
>
  <SectionContainer id="work-detail">
    <main class="work-page">
      {work ? (
        <>
          <!-- Hero Image Section - Gallery Presentation -->
          <section class="hero-section">
            <div class="hero-inner">
              <!-- Back Navigation -->
              <a href={backLink} class="back-nav">
                <span class="back-icon">
                  <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                    <path d="M19 12H5M12 19l-7-7 7-7"/>
                  </svg>
                </span>
                <span class="back-text">{backLabel}</span>
                <span class="back-line" aria-hidden="true"></span>
              </a>

              <!-- Main Artwork Display -->
              <div class="artwork-frame">
                <div class="artwork-container">
                  <div class="artwork-mat">
                    {mainImageMeta ? (
                      <Image
                        id="main-work-image"
                        src={mainImageMeta}
                        alt={work.title}
                        class="artwork-image"
                        loading="eager"
                        data-images={JSON.stringify(processedImageUrls)}
                      />
                    ) : mainImageSrc ? (
                      <img
                        id="main-work-image"
                        src={mainImageSrc}
                        alt={work.title}
                        class="artwork-image"
                        loading="eager"
                        fetchpriority="high"
                        decoding="async"
                        data-images={JSON.stringify(processedImageUrls)}
                      />
                    ) : (
                      <div class="artwork-placeholder">
                        <span>üñºÔ∏è</span>
                      </div>
                    )}
                  </div>

                  <!-- Gallery Frame Corners -->
                  <div class="frame-corner frame-corner-tl" aria-hidden="true"></div>
                  <div class="frame-corner frame-corner-tr" aria-hidden="true"></div>
                  <div class="frame-corner frame-corner-bl" aria-hidden="true"></div>
                  <div class="frame-corner frame-corner-br" aria-hidden="true"></div>

                  <!-- Floating Zoom Button -->
                  {mainImageSrc && (
                    <button class="zoom-trigger" aria-label="View full size">
                      <span class="zoom-icon">
                        <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                          <path d="M15 3h6v6M9 21H3v-6M21 3l-7 7M3 21l7-7"/>
                        </svg>
                      </span>
                      <span class="zoom-text">Expand</span>
                    </button>
                  )}
                </div>

                <!-- Image Counter (if multiple) -->
                {hasMultipleImages && (
                  <div class="image-counter">
                    <span class="counter-current">01</span>
                    <span class="counter-sep">/</span>
                    <span class="counter-total">{String(processedImageUrls.length).padStart(2, '0')}</span>
                  </div>
                )}
              </div>

              <!-- Scroll Indicator -->
              <div class="scroll-indicator" aria-hidden="true">
                <span class="scroll-line"></span>
                <span class="scroll-text">Scroll</span>
              </div>
            </div>
          </section>

          <!-- Work Information -->
          <section class="info-section">
            <div class="info-container">
              <!-- Decorative Line -->
              <div class="section-divider" aria-hidden="true">
                <span class="divider-line"></span>
                <span class="divider-dot"></span>
                <span class="divider-line"></span>
              </div>

              <!-- Breadcrumb -->
              <nav class="breadcrumb" aria-label="Breadcrumb">
                <a href="/">Home</a>
                <span class="sep">
                  <svg width="12" height="12" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                    <path d="M9 18l6-6-6-6"/>
                  </svg>
                </span>
                <a href="/works">Works</a>
                <span class="sep">
                  <svg width="12" height="12" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                    <path d="M9 18l6-6-6-6"/>
                  </svg>
                </span>
                <a href={`/works/${categorySlug}`}>{categoryTitle}</a>
                {collectionTitle && (
                  <>
                    <span class="sep">
                      <svg width="12" height="12" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                        <path d="M9 18l6-6-6-6"/>
                      </svg>
                    </span>
                    <a href={`/works/${categorySlug}/${collectionSlug}`}>{collectionTitle}</a>
                  </>
                )}
              </nav>

              <!-- Title Block -->
              <header class="title-block">
                <div class="title-meta">
                  <span class="collection-badge">{collectionTitle || categoryTitle}</span>
                </div>
                <h1 class="work-title">
                  <span class="title-line">{work.title}</span>
                </h1>
                <div class="artist-credit">
                  <span class="by-text">by</span>
                  <span class="artist-name">Fernando Feijoo</span>
                </div>
              </header>

              <!-- Two Column Layout -->
              <div class="info-grid">
                <!-- Left: Description -->
                <div class="info-left">
                  {work.description && work.description.trim() !== "" ? (
                    <div class="description-block">
                      <span class="section-label">About</span>
                      <p class="description">{work.description}</p>
                    </div>
                  ) : (
                    <div class="description-block">
                      <span class="section-label">About</span>
                      <p class="description description-placeholder">Original artwork by Fernando Feijoo</p>
                    </div>
                  )}
                </div>

                <!-- Right: Details & Actions -->
                <div class="info-right">
                  <div class="specs-block">
                    <span class="section-label">Details</span>
                    <dl class="specs">
                      <div class="spec-item">
                        <dt>
                          <span class="spec-icon">
                            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                              <path d="M12 2L2 7l10 5 10-5-10-5zM2 17l10 5 10-5M2 12l10 5 10-5"/>
                            </svg>
                          </span>
                          Medium
                        </dt>
                        <dd>{work.medium || 'Mixed media'}</dd>
                      </div>

                      {work.dimensions && (
                        <div class="spec-item">
                          <dt>
                            <span class="spec-icon">
                              <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                                <rect x="3" y="3" width="18" height="18" rx="2"/>
                                <path d="M3 9h18M9 21V9"/>
                              </svg>
                            </span>
                            Dimensions
                          </dt>
                          <dd>{work.dimensions}</dd>
                        </div>
                      )}

                      {work.edition && (
                        <div class="spec-item">
                          <dt>
                            <span class="spec-icon">
                              <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                                <path d="M4 19.5A2.5 2.5 0 0 1 6.5 17H20"/>
                                <path d="M6.5 2H20v20H6.5A2.5 2.5 0 0 1 4 19.5v-15A2.5 2.5 0 0 1 6.5 2z"/>
                              </svg>
                            </span>
                            Edition
                          </dt>
                          <dd>{work.edition}</dd>
                        </div>
                      )}

                      {work.price && (
                        <div class="spec-item spec-price">
                          <dt>
                            <span class="spec-icon">
                              <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                                <line x1="12" y1="1" x2="12" y2="23"/>
                                <path d="M17 5H9.5a3.5 3.5 0 0 0 0 7h5a3.5 3.5 0 0 1 0 7H6"/>
                              </svg>
                            </span>
                            Price
                          </dt>
                          <dd>{work.price}</dd>
                        </div>
                      )}
                    </dl>
                  </div>

                  <div class="cta-block">
                    <Cta
                      href={`mailto:contact@fernandofeijoo.com?subject=Inquiry about ${encodeURIComponent(work.title)}`}
                      label="Inquire About This Work"
                      isDark={true}
                    />
                  </div>
                </div>
              </div>
            </div>
          </section>

          <!-- Gallery Section (only if multiple images) -->
          {hasMultipleImages && (
            <section class="gallery-section">
              <div class="gallery-header">
                <div class="gallery-title-wrapper">
                  <span class="gallery-label">Gallery</span>
                  <span class="gallery-line" aria-hidden="true"></span>
                </div>
                <span class="gallery-count">
                  <span class="count-number">{galleryImages.length}</span>
                  <span class="count-text">images</span>
                </span>
              </div>
              <div class="gallery-track">
                <div class="gallery-grid" style={`--cols: ${galleryColCount}`}>
                  {work.imageUrls.map((url, index) => {
                     const meta = resolveImage(url);
                     return (
                    <figure class="gallery-card" data-index={index}>
                      <div class="gallery-card-inner">
                        {meta ? (
                           <Image
                             src={meta}
                             alt={`${work.title} - View ${index + 1}`}
                             class="gallery-img"
                           />
                        ) : (
                          <img
                            src={processImageUrl(url)}
                            alt={`${work.title} - View ${index + 1}`}
                            class="gallery-img"
                            loading="lazy"
                            decoding="async"
                          />
                        )}
                        
                        {/* Dark overlay */}
                        <div class="gallery-card-overlay" />
                        
                        {/* Top line accent */}
                        <div class="gallery-card-line-accent" aria-hidden="true" />
                        
                        {/* Content */}
                        <div class="gallery-card-content">
                          <span class="gallery-card-category">View {index + 1}</span>
                          <span class="gallery-card-view">
                            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                              <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"/>
                              <circle cx="12" cy="12" r="3"/>
                            </svg>
                            View
                          </span>
                        </div>
                        
                        {/* Corner index */}
                        <span class="gallery-card-index" aria-hidden="true">
                          {String(index + 1).padStart(2, '0')}
                        </span>
                        
                        {/* Border frame */}
                        <div class="gallery-card-frame" aria-hidden="true" />
                      </div>
                    </figure>
                  )})}
                </div>
              </div>
            </section>
          )}

          <!-- Related Works -->
          {relatedWorks.length > 0 && (
            <section class="related-section">
              <div class="related-header">
                <div class="related-title-wrapper">
                  <span class="related-label">Related</span>
                  <h2 class="related-title">More from {collectionTitle || categoryTitle}</h2>
                </div>
                <a href={backLink} class="related-link">
                  <span class="link-text">View All</span>
                  <span class="link-arrow">
                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                      <path d="M5 12h14M12 5l7 7-7 7"/>
                    </svg>
                  </span>
                </a>
              </div>
              <div class="related-grid">
                {relatedWorks.map((relatedWork, index) => {
                  const relatedUrl = relatedWork.imageUrls?.[0] || "";
                  const relatedMeta = resolveImage(relatedUrl);
                  const relatedSrc = processImageUrl(relatedUrl);

                  return (
                    <a href={`/works/${relatedWork.slug}`} class="work-card">
                      {relatedMeta ? (
                        <Image
                          src={relatedMeta}
                          alt={relatedWork.title}
                          width={400}
                          height={400}
                          class="work-card-img"
                        />
                      ) : relatedSrc ? (
                        <img
                          src={relatedSrc}
                          alt={relatedWork.title}
                          class="work-card-img"
                          loading="lazy"
                          decoding="async"
                        />
                      ) : (
                        <div class="work-card-empty">{relatedWork.title}</div>
                      )}
                      
                      {/* Dark overlay */}
                      <div class="work-card-overlay" />
                      
                      {/* Top line accent */}
                      <div class="work-card-line-accent" aria-hidden="true" />
                      
                      {/* Content */}
                      <div class="work-card-content">
                        <span class="work-card-category">{collectionTitle || categoryTitle}</span>
                        <h3 class="work-card-title">{relatedWork.title}</h3>
                        <span class="work-card-cta">
                          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                            <path d="M5 12h14M12 5l7 7-7 7"/>
                          </svg>
                          View Work
                        </span>
                      </div>
                      
                      {/* Corner index */}
                      <span class="work-card-index" aria-hidden="true">
                        {String(index + 1).padStart(2, "0")}
                      </span>
                      
                      {/* Border frame */}
                      <div class="work-card-frame" aria-hidden="true" />
                    </a>
                  );
                })}
              </div>
            </section>
          )}
        </>
      ) : (
        <section class="not-found">
          <span class="not-found-icon">üñºÔ∏è</span>
          <h1>Work Not Found</h1>
          <p>The work you're looking for doesn't exist or has been moved.</p>
          <Cta href="/works" label="View All Works" isDark={true} />
        </section>
      )}

      <ContactBanner />
    </main>
  </SectionContainer>

  <ImageModal id="imageModal" />

  <script type="application/ld+json" is:inline set:html={JSON.stringify(
    (() => {
      const schema: Record<string, unknown> = {
        "@context": "https://schema.org",
        "@type": "VisualArtwork",
        "name": work?.title,
        "image": processedImageUrls.map(url => `https://fernando-feijoo.com${url}`),
        "description": work?.description,
        "creator": {
          "@type": "Person",
          "name": "Fernando Feijoo",
          "url": "https://fernando-feijoo.com"
        },
        "artist": {
          "@type": "Person",
          "name": "Fernando Feijoo"
        },
        "artMedium": work?.medium,
        "artform": categoryTitle,
        "width": work?.dimensions
      };

      if (work?.price) {
        schema.offers = {
          "@type": "Offer",
          "price": work.price.replace(/[^0-9.]/g, ''),
          "priceCurrency": "GBP",
          "availability": "https://schema.org/InStock",
          "url": `https://fernando-feijoo.com/works/${work?.slug}`
        };
      }

      return schema;
    })()
  )} />

  <script>
    function setupWorkPage() {
      const mainImage = document.getElementById('main-work-image');
      const zoomBtn = document.querySelector('.zoom-trigger');
      const galleryItems = document.querySelectorAll('.gallery-card');

      const openModal = (index = 0) => {
        const imagesData = mainImage?.getAttribute('data-images');
        if (imagesData) {
          try {
            const images = JSON.parse(imagesData);
            // @ts-ignore
            if (window.imageModal?.openModal) {
              // @ts-ignore
              window.imageModal.openModal(images, index);
            }
          } catch (e) {
            console.error('Error parsing image data', e);
          }
        }
      };

      mainImage?.addEventListener('click', () => openModal(0));
      zoomBtn?.addEventListener('click', () => openModal(0));

      galleryItems.forEach((item) => {
        item.addEventListener('click', () => {
          const index = parseInt(item.getAttribute('data-index') || '0');
          openModal(index);
        });
      });
    }

    document.addEventListener('DOMContentLoaded', setupWorkPage);
  </script>
</Layout>


<style>
  .work-page {
    width: 100%;
  }

  /* ========================================
     HERO SECTION - Gallery Presentation
     ======================================== */
  .hero-section {
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 6rem 1rem 4rem;
    background: linear-gradient(180deg, #fafafa 0%, #f0f0f0 50%, #fafafa 100%);
    position: relative;
    overflow: hidden;
  }

  /* Subtle texture overlay */
  .hero-section::before {
    content: '';
    position: absolute;
    inset: 0;
    background: 
      repeating-linear-gradient(
        90deg,
        transparent,
        transparent 100px,
        rgba(0,0,0,0.01) 100px,
        rgba(0,0,0,0.01) 101px
      );
    pointer-events: none;
  }

  .hero-inner {
    width: 100%;
    max-width: 1100px;
    margin: 0 auto;
    position: relative;
    z-index: 1;
  }

  .back-nav {
    display: inline-flex;
    align-items: center;
    gap: 1rem;
    font-size: 0.75rem;
    font-weight: 500;
    letter-spacing: 0.15em;
    text-transform: uppercase;
    color: #666;
    text-decoration: none;
    margin-bottom: 2.5rem;
    transition: all 0.5s cubic-bezier(0.16, 1, 0.3, 1);
    padding: 0.75rem 0;
    cursor: pointer;
    position: relative;
  }

  .back-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    border: 1px solid #ddd;
    border-radius: 50%;
    transition: all 0.4s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .back-text {
    position: relative;
    padding-bottom: 2px;
  }

  .back-line {
    position: absolute;
    bottom: 0;
    left: 56px;
    width: 0;
    height: 1px;
    background: #000;
    transition: width 0.5s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .back-nav:hover {
    color: #000;
  }

  .back-nav:hover .back-icon {
    border-color: #000;
    transform: translateX(-4px);
  }

  .back-nav:hover .back-line {
    width: calc(100% - 56px);
  }

  .back-nav svg {
    transition: transform 0.4s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .back-nav:hover svg {
    transform: translateX(-3px);
  }

  /* Artwork Frame - Museum Style */
  .artwork-frame {
    position: relative;
    padding: 2rem;
    background: #fff;
    box-shadow:
      0 40px 80px -20px rgba(0, 0, 0, 0.15),
      0 0 0 1px rgba(0, 0, 0, 0.05);
  }

  .artwork-container {
    position: relative;
    background: #000;
    overflow: hidden;
  }

  .artwork-mat {
    position: relative;
    padding: 3rem;
    background: #f5f5f5;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .artwork-image {
    max-width: 100%;
    max-height: 70vh;
    width: auto;
    height: auto;
    display: block;
    cursor: zoom-in;
    transition: transform 0.8s cubic-bezier(0.16, 1, 0.3, 1), filter 0.6s cubic-bezier(0.16, 1, 0.3, 1);
    box-shadow: 0 10px 40px rgba(0, 0, 0, 0.2);
  }

  .artwork-container:hover .artwork-image {
    transform: scale(1.02);
  }

  .artwork-placeholder {
    aspect-ratio: 1;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 5rem;
    color: #ddd;
    background: #f5f5f5;
  }

  /* Gallery Frame Corners */
  .frame-corner {
    position: absolute;
    width: 20px;
    height: 20px;
    border: 2px solid rgba(0, 0, 0, 0.2);
    transition: all 0.4s cubic-bezier(0.16, 1, 0.3, 1);
    pointer-events: none;
  }

  .frame-corner-tl {
    top: 1rem;
    left: 1rem;
    border-right: none;
    border-bottom: none;
  }

  .frame-corner-tr {
    top: 1rem;
    right: 1rem;
    border-left: none;
    border-bottom: none;
  }

  .frame-corner-bl {
    bottom: 1rem;
    left: 1rem;
    border-right: none;
    border-top: none;
  }

  .frame-corner-br {
    bottom: 1rem;
    right: 1rem;
    border-left: none;
    border-top: none;
  }

  .artwork-container:hover .frame-corner {
    width: 30px;
    height: 30px;
    border-color: rgba(0, 0, 0, 0.4);
  }

  /* Zoom Trigger */
  .zoom-trigger {
    position: absolute;
    bottom: 2rem;
    right: 2rem;
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding: 1rem 1.75rem;
    background: rgba(0, 0, 0, 0.9);
    border: 1px solid rgba(255, 255, 255, 0.1);
    color: #fff;
    font-size: 0.75rem;
    font-weight: 500;
    letter-spacing: 0.15em;
    text-transform: uppercase;
    cursor: pointer;
    opacity: 0;
    transform: translateY(20px);
    transition: all 0.6s cubic-bezier(0.16, 1, 0.3, 1);
    overflow: hidden;
  }

  .zoom-trigger::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255,255,255,0.1), transparent);
    transition: left 0.6s ease;
  }

  .artwork-container:hover .zoom-trigger {
    opacity: 1;
    transform: translateY(0);
  }

  .zoom-trigger:hover {
    background: #000;
    transform: translateY(-3px);
    box-shadow: 0 12px 32px rgba(0, 0, 0, 0.4);
  }

  .zoom-trigger:hover::before {
    left: 100%;
  }

  .zoom-trigger:active {
