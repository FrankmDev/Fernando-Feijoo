    padding: 8rem 1rem;
    text-align: center;
  }

  .not-found-icon {
    font-size: 5rem;
    display: block;
    margin-bottom: 2rem;
  }

  .not-found h1 {
    font-size: 2rem;
    font-weight: 500;
    color: #000;
    margin: 0 0 0.75rem;
  }

  .not-found p {
    color: #666;
    margin: 0 0 2.5rem;
  }

  /* ========================================
     RESPONSIVE
     ======================================== */
  @media (min-width: 640px) {
    .related-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 4px;
    }

    .gallery-grid {
      grid-template-columns: repeat(var(--cols, 4), 1fr);
    }
  }

  @media (min-width: 768px) {
    .hero-section {
      min-height: 80vh;
      padding: 4rem 2rem;
    }

    .info-section {
      padding: 6rem 2rem;
    }

    .info-grid {
      grid-template-columns: 1.2fr 1fr;
      gap: 4rem;
    }

    .related-section {
      padding: 7rem 2rem;
    }

    .related-grid {
      gap: 6px;
    }
  }

  @media (min-width: 1024px) {
    .hero-section {
      min-height: 85vh;
    }

    .info-grid {
      gap: 6rem;
    }

    .related-grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  /* ========================================
     REDUCED MOTION
     ======================================== */
  @media (prefers-reduced-motion: reduce) {
    .artwork-image,
    .zoom-trigger,
    .gallery-img,
    .gallery-hover,
    .back-nav svg,
    .related-link svg {
      transition: none;
    }

    .artwork-container:hover .artwork-image,
    .gallery-card:hover .gallery-img {
      transform: none;
    }

    .zoom-trigger {
      opacity: 1;
      transform: none;
    }

    .gallery-hover {
      opacity: 1;
    }
  }

  /* ========================================
     PRINT
     ======================================== */
  @media print {
    .zoom-trigger,
    .gallery-hover,
    .cta-block,
    .back-nav,
    .related-section {
      display: none;
    }

    .hero-section {
      min-height: auto;
      padding: 2rem 0;
    }

    .artwork-container {
      box-shadow: none;
      border: 1px solid #ddd;
    }
  }
</style>
