---
import Layout from "@layouts/Layout.astro";
import Header from "@sections/Header/Header.astro";
import Footer from "@sections/Footer/Footer.astro";
import PageBanner from "@components/PageBanner.astro";
import ContactBanner from "@components/Hero/ContactBanner.astro";
import { WORKS } from "@data/works";
import {
  getFirstImageMetaFromCategory,
  getFirstImageFromCategory,
} from "@utils/images";
import type { Category } from "@/types";
import { Image } from "astro:assets";

// Separar Prints del resto
const printsCategory = WORKS.find((c) => c.slug === "prints");
const otherCategories = WORKS.filter((c) => c.slug !== "prints");

const pageDescription =
  "Explore Fernando Feijoo's diverse body of work spanning prints, artist books, ceramics, drawings, and mixed media pieces.";
---

<Layout title="Works - Fernando Feijoo" description={pageDescription}>
  <Header slot="header" />
  <main>
    <PageBanner title="Works" />

    <section class="works-section">
      <div class="container">
        <p class="intro-text animate-fade-in">
          {pageDescription}
        </p>

        <!-- Bento Grid Layout -->
        <div class="bento-grid">
          {/* Prints - Featured (Full Width Top Row) */}
          {
            printsCategory && (
              <a
                href={`/works/${printsCategory.slug}`}
                class="bento-item bento-featured reveal"
                style="--delay: 0s"
              >
                <div class="featured-image-wrapper">
                  {getFirstImageMetaFromCategory(printsCategory) ? (
                    <Image
                      src={getFirstImageMetaFromCategory(printsCategory)!}
                      alt={`${printsCategory.title} by Fernando Feijoo`}
                      class="featured-image"
                      loading="eager"
                      decoding="async"
                    />
                  ) : (
                    <img
                      src={getFirstImageFromCategory(printsCategory)}
                      alt={`${printsCategory.title} by Fernando Feijoo`}
                      class="featured-image"
                      loading="eager"
                      decoding="async"
                    />
                  )}
                  <div class="featured-overlay" />
                </div>

                <div class="featured-content">
                  <h2 class="featured-title">{printsCategory.title}</h2>
                </div>

                <div class="featured-arrow" aria-hidden="true">
                  <svg
                    width="24"
                    height="24"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="1.5"
                  >
                    <path
                      d="M7 17L17 7M17 7H7M17 7V17"
                      stroke-linecap="round"
                      stroke-linejoin="round"
                    />
                  </svg>
                </div>

              </a>
            )
          }

          {/* Other Categories - 2x2 Grid */}
          {
            otherCategories.map((category, index) => (
              <a
                href={`/works/${category.slug}`}
                class={`bento-item bento-regular reveal bento-${category.slug}`}
                style={`--delay: ${0.15 + index * 0.1}s`}
              >
                <div class="regular-image-wrapper">
                  {getFirstImageMetaFromCategory(category) ? (
                    <Image
                      src={getFirstImageMetaFromCategory(category)!}
                      alt={`${category.title} by Fernando Feijoo`}
                      class="regular-image"
                      loading="lazy"
                      decoding="async"
                    />
                  ) : (
                    <img
                      src={getFirstImageFromCategory(category)}
                      alt={`${category.title} by Fernando Feijoo`}
                      class="regular-image"
                      loading="lazy"
                      decoding="async"
                    />
                  )}
                  <div class="regular-overlay" />
                </div>

                <div class="regular-content">
                  <h3 class="regular-title">{category.title}</h3>
                </div>

                <div class="regular-arrow" aria-hidden="true">
                  <svg
                    width="24"
                    height="24"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="1.5"
                  >
                    <path
                      d="M7 17L17 7M17 7H7M17 7V17"
                      stroke-linecap="round"
                      stroke-linejoin="round"
                    />
                  </svg>
                </div>

              </a>
            ))
          }
        </div>

        <!-- CTA Section -->
        <section class="cta-section reveal">
          <div class="cta-inner">
            <div class="cta-content">
              <span class="cta-eyebrow">Get in Touch</span>
              <h2 class="cta-title">Interested in<br/>a Piece?</h2>
              <p class="cta-text">
                Inquire about availability, pricing, or commissioning new work.
              </p>
            </div>

            <div class="cta-actions">
              <a href="/contact" class="cta-button">
                <span class="btn-text">Contact</span>
                <span class="btn-arrow">
                  <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M5 12h14M12 5l7 7-7 7"/>
                  </svg>
                </span>
              </a>
              <a href="mailto:info@fernandofeijoo.com" class="cta-link">
                info@fernandofeijoo.com
              </a>
            </div>
          </div>
          
          <div class="cta-background" aria-hidden="true">
            <div class="bg-shape shape-1"></div>
            <div class="bg-shape shape-2"></div>
          </div>
        </section>
      </div>
    </section>


  </main>
  <Footer slot="footer" />
</Layout>

<style>
  .works-section {
    padding: 4rem 1rem;
  }

  .container {
    max-width: 1280px;
    margin: 0 auto;
  }

  .intro-text {
    font-size: 1rem;
    color: #444;
    text-align: center;
    max-width: 640px;
    margin: 0 auto 3rem;
    line-height: 1.8;
  }

  /* Bento Grid Layout */
  .bento-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 1rem;
  }

  /* Base Bento Item Styles */
  .bento-item {
    position: relative;
    display: block;
    text-decoration: none;
    overflow: hidden;
    border-radius: 8px;
    background: #0a0a0a;
    transition: transform 0.5s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .bento-item:hover {
    transform: translateY(-4px);
  }

  /* Featured Item (Prints) */
  .bento-featured {
    grid-column: 1 / -1;
    aspect-ratio: 16 / 9;
    min-height: 400px;
  }

  .featured-image-wrapper {
    position: absolute;
    inset: 0;
    overflow: hidden;
  }

  .featured-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.8s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .bento-featured:hover .featured-image {
    transform: scale(1.08);
  }

  .featured-overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(
      to top,
      rgba(0, 0, 0, 0.8) 0%,
      rgba(0, 0, 0, 0.4) 50%,
      rgba(0, 0, 0, 0.2) 100%
    );
    transition: background 0.5s ease;
  }

  .bento-featured:hover .featured-overlay {
    background: linear-gradient(
      to top,
      rgba(0, 0, 0, 0.85) 0%,
      rgba(0, 0, 0, 0.5) 50%,
      rgba(0, 0, 0, 0.3) 100%
    );
  }

  .featured-content {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    padding: 1.5rem;
    color: white;
    z-index: 2;
  }

  .featured-title {
    font-size: clamp(1.25rem, 3vw, 1.75rem);
    font-weight: 500;
    letter-spacing: -0.02em;
    margin: 0;
    line-height: 1.2;
    transform: translateY(12px);
    transition: transform 0.5s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .bento-featured:hover .featured-title {
    transform: translateY(0);
  }

  .featured-arrow {
    position: absolute;
    top: 1.25rem;
    right: 1.25rem;
    width: 44px;
    height: 44px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    background: rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(8px);
    border-radius: 50%;
    opacity: 0;
    transform: scale(0.8) rotate(-45deg);
    transition: all 0.4s cubic-bezier(0.34, 1.56, 0.64, 1);
    z-index: 3;
  }

  .bento-featured:hover .featured-arrow {
    opacity: 1;
    transform: scale(1) rotate(0);
  }

  /* Regular Items */
  .bento-regular {
    aspect-ratio: 4 / 3;
    min-height: 280px;
  }

  .regular-image-wrapper {
    position: absolute;
    inset: 0;
    overflow: hidden;
  }

  .regular-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.8s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .bento-regular:hover .regular-image {
    transform: scale(1.08);
  }

  .regular-overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(
      to top,
      rgba(0, 0, 0, 0.8) 0%,
      rgba(0, 0, 0, 0.4) 50%,
      rgba(0, 0, 0, 0.2) 100%
    );
    transition: background 0.5s ease;
  }

  .bento-regular:hover .regular-overlay {
    background: linear-gradient(
      to top,
      rgba(0, 0, 0, 0.85) 0%,
      rgba(0, 0, 0, 0.5) 50%,
      rgba(0, 0, 0, 0.3) 100%
    );
  }

  .regular-content {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    padding: 1.5rem;
    color: white;
    z-index: 2;
  }

  .regular-title {
    font-size: clamp(1.25rem, 3vw, 1.75rem);
    font-weight: 500;
    letter-spacing: -0.02em;
    margin: 0 0 0.5rem;
    line-height: 1.2;
    transform: translateY(12px);
    transition: transform 0.5s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .bento-regular:hover .regular-title {
    transform: translateY(0);
  }

  .regular-arrow {
    position: absolute;
    top: 1.25rem;
    right: 1.25rem;
    width: 44px;
    height: 44px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    background: rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(8px);
    border-radius: 50%;
    opacity: 0;
    transform: scale(0.8) rotate(-45deg);
    transition: all 0.4s cubic-bezier(0.34, 1.56, 0.64, 1);
    z-index: 3;
  }

  .bento-regular:hover .regular-arrow {
    opacity: 1;
    transform: scale(1) rotate(0);
  }

  /* Reveal Animation */
  .reveal {
    opacity: 0;
    transform: translateY(30px);
    transition:
      opacity 0.8s cubic-bezier(0.16, 1, 0.3, 1),
      transform 0.8s cubic-bezier(0.16, 1, 0.3, 1);
    transition-delay: var(--delay, 0s);
  }

  .reveal.revealed {
    opacity: 1;
    transform: translateY(0);
  }

  /* CTA Section - Refined Design */
  .cta-section {
    margin-top: 6rem;
    position: relative;
    padding: 6rem 2rem;
    overflow: hidden;
    background: #0a0a0a;
    border-radius: 2px;
  }

  .cta-inner {
    position: relative;
    z-index: 2;
    max-width: 800px;
    margin: 0 auto;
    text-align: center;
  }

  .cta-content {
    margin-bottom: 3rem;
  }

  .cta-eyebrow {
    display: block;
    font-family: "Exo", system-ui, sans-serif;
    font-size: 0.6875rem;
    font-weight: 500;
    letter-spacing: 0.2em;
    text-transform: uppercase;
    color: rgba(255, 255, 255, 0.4);
    margin-bottom: 1.5rem;
  }

  .cta-title {
    font-family: "Exo", system-ui, sans-serif;
    font-size: clamp(2.5rem, 6vw, 4rem);
    font-weight: 300;
    letter-spacing: -0.03em;
    color: #fff;
    margin: 0 0 1.5rem;
    line-height: 1.1;
  }

  .cta-text {
    font-family: "Exo", system-ui, sans-serif;
    font-size: 1rem;
    font-weight: 400;
    line-height: 1.7;
    color: rgba(255, 255, 255, 0.6);
    margin: 0;
    max-width: 400px;
    margin-left: auto;
    margin-right: auto;
  }

  .cta-actions {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1.5rem;
  }

  .cta-button {
    display: inline-flex;
    align-items: center;
    gap: 0.75rem;
    padding: 1rem 2rem;
    background: #fff;
    color: #0a0a0a;
    text-decoration: none;
    font-family: "Exo", system-ui, sans-serif;
    font-size: 0.75rem;
    font-weight: 600;
    letter-spacing: 0.12em;
    text-transform: uppercase;
    border-radius: 100px;
    transition: all 0.4s cubic-bezier(0.16, 1, 0.3, 1);
    outline: none;
    -webkit-tap-highlight-color: transparent;
  }

  .cta-button:focus,
  .cta-button:focus-visible {
    outline: none;
  }

  .cta-button:hover {
    background: rgba(255, 255, 255, 0.9);
    transform: translateY(-2px);
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
  }

  .btn-arrow {
    display: flex;
    transition: transform 0.3s ease;
  }

  .cta-button:hover .btn-arrow {
    transform: translateX(4px);
  }

  .cta-link {
    font-family: "Exo", system-ui, sans-serif;
    font-size: 0.8125rem;
    font-weight: 400;
    color: rgba(255, 255, 255, 0.5);
    text-decoration: none;
    letter-spacing: 0.02em;
    position: relative;
    transition: color 0.3s ease;
    outline: none;
    -webkit-tap-highlight-color: transparent;
  }

  .cta-link:focus,
  .cta-link:focus-visible {
    outline: none;
  }

  .cta-link::after {
    content: '';
    position: absolute;
    bottom: -2px;
    left: 0;
    width: 0;
    height: 1px;
    background: rgba(255, 255, 255, 0.5);
    transition: width 0.3s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .cta-link:hover {
    color: rgba(255, 255, 255, 0.8);
  }

  .cta-link:hover::after {
    width: 100%;
  }

  /* Background Shapes */
  .cta-background {
    position: absolute;
    inset: 0;
    z-index: 1;
    pointer-events: none;
    overflow: hidden;
  }

  .bg-shape {
    position: absolute;
    border-radius: 50%;
    filter: blur(100px);
    opacity: 0.15;
  }

  .shape-1 {
    width: 400px;
    height: 400px;
    background: #fff;
    top: -200px;
    right: -100px;
  }

  .shape-2 {
    width: 300px;
    height: 300px;
    background: #fff;
    bottom: -150px;
    left: -50px;
  }

  /* Responsive - Tablet */
  @media (min-width: 640px) {
    .bento-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 1.25rem;
    }

    .bento-featured {
      grid-column: 1 / -1;
      aspect-ratio: 21 / 9;
    }

    .featured-description,
    .featured-collections {
      display: block;
    }

    .cta-actions {
      flex-direction: row;
      justify-content: center;
      align-items: center;
      gap: 3rem;
    }
  }

  /* Responsive - Desktop */
  @media (min-width: 768px) {
    .works-section {
      padding: 5rem 2rem;
    }

    .bento-grid {
      gap: 1.5rem;
    }

    .bento-featured {
      min-height: 480px;
    }

    .featured-content {
      padding: 2rem;
    }

    .featured-arrow {
      top: 1.5rem;
      right: 1.5rem;
    }

    .regular-content {
      padding: 2rem;
    }

    .regular-arrow {
      top: 1.5rem;
      right: 1.5rem;
    }

    .cta-section {
      margin-top: 8rem;
      padding: 7rem 3rem;
    }

    .cta-title {
      font-size: clamp(3rem, 5vw, 5rem);
    }
  }

  @media (min-width: 1024px) {
    .bento-featured {
      aspect-ratio: 16 / 7;
      min-height: 400px;
    }

    .bento-regular {
      min-height: 320px;
    }

    .featured-title {
      font-size: clamp(1.5rem, 3vw, 2rem);
    }

    .cta-section {
      padding: 8rem 4rem;
    }

    .shape-1 {
      width: 600px;
      height: 600px;
      top: -300px;
      right: -200px;
    }

    .shape-2 {
      width: 500px;
      height: 500px;
      bottom: -250px;
      left: -100px;
    }
  }

  /* Reduced motion */
  @media (prefers-reduced-motion: reduce) {
    .reveal {
      opacity: 1;
      transform: none;
      transition: none;
    }

    .bento-item {
      transition: none;
    }

    .bento-item:hover {
      transform: none;
    }

    .cta-button,
    .btn-arrow,
    .cta-link::after {
      transition: none;
    }

    .bg-shape {
      display: none;
    }
  }

</style>

<script>
  // Intersection Observer for reveal animations
  document.addEventListener("DOMContentLoaded", () => {
    const observer = new IntersectionObserver(
      (entries) => {
        entries.forEach((entry) => {
          if (entry.isIntersecting) {
            entry.target.classList.add("revealed");
            observer.unobserve(entry.target);
          }
        });
      },
      {
        threshold: 0.1,
        rootMargin: "0px 0px -50px 0px",
      },
    );

    document.querySelectorAll(".reveal").forEach((el) => {
      observer.observe(el);
    });
  });
</script>
