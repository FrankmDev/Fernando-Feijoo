---
import Layout from "@layouts/Layout.astro";
import PageBanner from "@components/PageBanner.astro";
import ContactBanner from "@components/Hero/ContactBanner.astro";
import WorkCard from "@components/WorkCard.astro";
import Cta from "@components/Cta.astro";
import { WORKS } from "@data/works";
import { getFirstImageFromCategory } from "@utils/images";
import type { Category } from "@/types";

const getTotalWorksCount = (category: Category): number => {
  if (category.works) return category.works.length;
  if (category.collections) {
    return category.collections.reduce((acc, col) => acc + col.works.length, 0);
  }
  return 0;
};

const pageDescription =
  "Explore Fernando Feijoo's diverse body of work spanning prints, artist books, ceramics, drawings, and mixed media pieces.";
---

<Layout title="Works - Fernando Feijoo" description={pageDescription}>
  <main>
    <PageBanner title="Works" />

    <section class="works-section">
      <div class="container">
        <p class="intro-text animate-fade-in">
          {pageDescription}
        </p>

        <div class="grid">
          {
            WORKS.map((category, index) => (
              <div class="grid-item" style={`--delay: ${0.1 + index * 0.08}s`}>
                <WorkCard
                  href={`/works/${category.slug}`}
                  title={category.title}
                  subtitle={`${getTotalWorksCount(category)} works`}
                  imageUrl={getFirstImageFromCategory(category)}
                  imageAlt={`${category.title} by Fernando Feijoo`}
                  isAboveFold={index < 3}
                />
              </div>
            ))
          }
        </div>

        <section class="cta-section reveal">
          <div class="cta-inner">
            <div class="cta-decoration" aria-hidden="true">
              <span class="cta-line"></span>
              <span class="cta-icon">
                <svg
                  width="32"
                  height="32"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="1.5"
                >
                  <path d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z" />
                </svg>
              </span>
              <span class="cta-line"></span>
            </div>

            <h2 class="cta-title">Interested in a Piece?</h2>
            <p class="cta-text">
              Get in touch to inquire about availability, pricing, or
              commissioning new work.
            </p>

            <div class="cta-actions">
              <Cta href="/contact" label="Contact Fernando" isDark={true} />
              <a href="mailto:info@fernandofeijoo.com" class="cta-email">
                <span class="email-icon">
                  <svg
                    width="18"
                    height="18"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="1.5"
                  >
                    <rect x="2" y="4" width="20" height="16" rx="2" />
                    <path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7" />
                  </svg>
                </span>
                <span>info@fernandofeijoo.com</span>
              </a>
            </div>
          </div>
        </section>
      </div>
    </section>

    <ContactBanner />
  </main>
</Layout>

<style>
  .works-section {
    padding: 4rem 1rem;
  }

  .container {
    max-width: 1280px;
    margin: 0 auto;
  }

  .intro-text {
    font-size: 1.125rem;
    color: var(--color-gray-500, #666);
    text-align: center;
    max-width: 640px;
    margin: 0 auto 3rem;
    line-height: 1.7;
  }

  .grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 3px;
  }

  .grid-item {
    opacity: 0;
    animation: fadeInUp 0.6s var(--ease-out-expo, cubic-bezier(0.16, 1, 0.3, 1))
      forwards;
    animation-delay: var(--delay, 0s);
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .cta-section {
    margin-top: 6rem;
    padding: 5rem 2rem;
    background: linear-gradient(to bottom, #fafafa 0%, #fff 100%);
    border-top: 1px solid var(--color-gray-200, #e5e5e5);
  }

  .cta-inner {
    max-width: 600px;
    margin: 0 auto;
    text-align: center;
  }

  .cta-decoration {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 1.5rem;
    margin-bottom: 2rem;
  }

  .cta-line {
    flex: 1;
    max-width: 80px;
    height: 1px;
    background: linear-gradient(to var(--dir, right), #ddd, transparent);
  }

  .cta-line:last-child {
    --dir: left;
  }

  .cta-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 64px;
    height: 64px;
    border: 1px solid #e5e5e5;
    border-radius: 50%;
    color: #999;
    transition: all 0.3s ease;
  }

  .cta-section:hover .cta-icon {
    color: #000;
    border-color: #000;
    transform: scale(1.05);
  }

  .cta-title {
    font-size: clamp(1.75rem, 4vw, 2.5rem);
    font-weight: 500;
    letter-spacing: -0.03em;
    color: var(--color-black, #000);
    margin: 0 0 1rem;
  }

  .cta-text {
    font-size: 1.0625rem;
    line-height: 1.7;
    color: var(--color-gray-500, #666);
    margin: 0 0 2.5rem;
  }

  .cta-actions {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1.5rem;
  }

  .cta-email {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    color: #888;
    text-decoration: none;
    font-size: 0.875rem;
    transition: color 0.3s ease;
  }

  .cta-email:hover {
    color: #000;
  }

  .email-icon {
    display: flex;
    opacity: 0.7;
    transition: opacity 0.3s ease;
  }

  .cta-email:hover .email-icon {
    opacity: 1;
  }

  @media (min-width: 640px) {
    .cta-actions {
      flex-direction: row;
      justify-content: center;
      gap: 2rem;
    }

    .grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 4px;
    }
  }

  @media (min-width: 768px) {
    .works-section {
      padding: 5rem 2rem;
    }

    .grid {
      gap: 6px;
    }

    .cta-section {
      padding: 6rem 2rem;
    }
  }

  @media (min-width: 1024px) {
    .grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  @media (prefers-reduced-motion: reduce) {
    .grid-item {
      opacity: 1;
      animation: none;
    }
  }
</style>
