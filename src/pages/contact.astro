---
import "@styles/general.css";
import Layout from "@layouts/Layout.astro";
import PageBanner from "@components/PageBanner.astro";
import MailIcon from "@icons/mail-icon.astro";
import MapIcon from "@icons/map-icon.astro";
import { Image } from "astro:assets";
import columbianImg from "@assets/profile/columbian.avif";
import minotaurpressImg from "@assets/minotaurpress.avif";

const contactData = [
  {
    icon: MailIcon,
    text: "info@fernandofeijoo.com",
    href: "mailto:info@fernandofeijoo.com",
    label: "Email",
  },
  {
    icon: MapIcon,
    text: "Cambridge, UK",
    href: "https://www.google.com/maps/place/Cambridge,+UK",
    label: "Location",
  },
];

const pageDescription =
  "Get in touch with Fernando Feijoo. Contact information, location in Cambridge, UK, for commissions, exhibitions, and collaborations.";
---

<Layout title="Contact - Fernando Feijoo" description={pageDescription}>
  <main class="contact-page">
    <PageBanner title="Contact" />

    <!-- Hero Quote -->
    <section class="hero-quote">
      <div class="quote-container">
        <blockquote class="quote reveal">
          <div class="quote-decoration" aria-hidden="true">
            <span class="quote-line"></span>
            <span class="quote-icon">
              <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
                <path
                  d="M10 8H6a2 2 0 00-2 2v4a2 2 0 002 2h2a2 2 0 002-2v-2a2 2 0 00-2-2H6v-2h4V8zm10 0h-4a2 2 0 00-2 2v4a2 2 0 002 2h2a2 2 0 002-2v-2a2 2 0 00-2-2h-2v-2h4V8z"
                  fill="currentColor"></path>
              </svg>
            </span>
            <span class="quote-line"></span>
          </div>
          <p>
            The world is full of conflict and confusion. In my work I try to
            interpret the chaos in positive, humorous and imaginative ways.
          </p>
          <footer class="quote-author">
            <span class="author-line" aria-hidden="true"></span>
            <span class="author-name">Fernando Feijoo</span>
          </footer>
        </blockquote>
      </div>
    </section>

    <!-- Main Content -->
    <section class="main-section">
      <div class="main-container">
        <!-- Left: Image -->
        <div class="image-column reveal-left">
          <figure class="main-image">
            <Image
              src={columbianImg}
              alt="Fernando Feijoo working with a Columbian printing press"
              loading="eager"
              decoding="async"
              width={600}
              height={750}
            />
          </figure>
        </div>

        <!-- Right: Content -->
        <div class="content-column">
          <!-- Contact Info -->
          <div class="contact-block reveal-right" style="--delay: 0.1s">
            <span class="block-label">Contact</span>
            <h2 class="block-title">Let's Create Together</h2>
            <p class="block-text">
              Interested in a commission, collaboration, or simply want to learn
              more about the work? I'd love to hear from you.
            </p>

            <div class="contact-items">
              {
                contactData.map((item, i) => (
                  <a
                    href={item.href}
                    class="contact-item"
                    style={`--i: ${i}`}
                    target={item.href.startsWith("http") ? "_blank" : undefined}
                    rel={
                      item.href.startsWith("http")
                        ? "noopener noreferrer"
                        : undefined
                    }
                  >
                    <span class="item-icon">
                      <item.icon aria-hidden="true" />
                    </span>
                    <span class="item-content">
                      <span class="item-label">{item.label}</span>
                      <span class="item-text">{item.text}</span>
                    </span>
                    <span class="item-arrow" aria-hidden="true">
                      <svg
                        width="16"
                        height="16"
                        viewBox="0 0 24 24"
                        fill="none"
                        stroke="currentColor"
                        stroke-width="1.5"
                      >
                        <path
                          d="M7 17L17 7M17 7H7M17 7V17"
                          stroke-linecap="round"
                          stroke-linejoin="round"
                        />
                      </svg>
                    </span>
                  </a>
                ))
              }
            </div>
          </div>

          <!-- Studio Section -->
          <div class="studio-block reveal-right" style="--delay: 0.2s">
            <div class="studio-card">
              <div class="studio-card-header">
                <span class="studio-label">Studio</span>
                <div class="studio-accent">
                  <svg width="16" height="16" viewBox="0 0 24 24" fill="none" aria-hidden="true">
                    <circle cx="12" cy="12" r="2" fill="currentColor"/>
                    <circle cx="12" cy="12" r="6" stroke="currentColor" stroke-width="1.5"/>
                  </svg>
                </div>
              </div>

              <a
                href="https://www.instagram.com/minotaurpress/"
                class="studio-link-enhanced"
                target="_blank"
                rel="noopener noreferrer"
              >
                <div class="studio-visual">
                  <figure class="studio-avatar-enhanced">
                    <Image
                      src={minotaurpressImg}
                      alt="Minotaur Press Studio"
                      loading="lazy"
                      decoding="async"
                      width={56}
                      height={56}
                    />
                  </figure>
                  <div class="studio-pulse"></div>
                </div>

                <div class="studio-content">
                  <span class="studio-handle">@minotaurpress</span>
                  <span class="studio-description">Behind the scenes and work in progress</span>
                  <div class="studio-meta">
                    <span class="studio-platform">
                      <svg width="12" height="12" viewBox="0 0 24 24" fill="none" aria-hidden="true">
                        <rect x="2" y="2" width="20" height="20" rx="5" stroke="currentColor" stroke-width="1.5"/>
                        <circle cx="12" cy="12" r="4" stroke="currentColor" stroke-width="1.5"/>
                      </svg>
                      Instagram
                    </span>
                    <span class="studio-cta">
                      Follow
                      <svg width="12" height="12" viewBox="0 0 24 24" fill="none" aria-hidden="true">
                        <path d="M5 12h14M13 6l6 6-6 6" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
                      </svg>
                    </span>
                  </div>
                </div>
              </a>
            </div>
          </div>

          <!-- Divider -->
          <div class="divider reveal-fade" style="--delay: 0.25s"></div>

          <!-- CV Download -->
          <div class="cv-block reveal-right" style="--delay: 0.3s">
            <a href="#" class="cv-button">
              <span>Download CV</span>
              <svg
                width="16"
                height="16"
                viewBox="0 0 24 24"
                fill="none"
                aria-hidden="true"
              >
                <path
                  d="M12 4v12M7 11l5 5 5-5M5 19h14"
                  stroke="currentColor"
                  stroke-width="1.5"
                  stroke-linecap="round"
                  stroke-linejoin="round"></path>
              </svg>
            </a>
          </div>
        </div>
      </div>
    </section>

    <!-- Newsletter Section -->
    <section class="newsletter-section">
      <div class="newsletter-container reveal">
        <div class="newsletter-content">
          <span class="newsletter-label">Newsletter</span>
          <h2 class="newsletter-title">Stay Updated</h2>
          <p class="newsletter-text">
            Receive updates on new works, exhibitions, and studio news.
          </p>
        </div>

        <form
          action="https://fernandofeijoo.us21.list-manage.com/subscribe/post"
          method="POST"
          class="newsletter-form"
          id="mc-embedded-subscribe-form"
          name="mc-embedded-subscribe-form"
          target="_blank"
        >
          <!-- Mailchimp hidden fields - update these with your actual values -->
          <input type="hidden" name="u" value="YOUR_MAILCHIMP_U_VALUE" />
          <input type="hidden" name="id" value="YOUR_MAILCHIMP_ID_VALUE" />

          <div class="form-row">
            <div class="input-wrapper">
              <input
                type="email"
                name="EMAIL"
                id="mce-EMAIL"
                placeholder="Enter your email"
                required
                autocomplete="email"
                class="email-input"
              />
            </div>
            <button type="submit" class="submit-button">
              <span>Subscribe</span>
              <svg
                width="16"
                height="16"
                viewBox="0 0 16 16"
                fill="none"
                aria-hidden="true"
              >
                <path
                  d="M3 8h10M9 4l4 4-4 4"
                  stroke="currentColor"
                  stroke-width="1.5"
                  stroke-linecap="round"
                  stroke-linejoin="round"></path>
              </svg>
            </button>
          </div>

          <p class="form-note">No spam, unsubscribe anytime.</p>

          <!-- Bot protection -->
          <div style="position: absolute; left: -5000px;" aria-hidden="true">
            <input
              type="text"
              name="b_YOUR_MAILCHIMP_U_VALUE_YOUR_MAILCHIMP_ID_VALUE"
              tabindex="-1"
              value=""
            />
          </div>
        </form>
      </div>
    </section>
  </main>
</Layout>

<style>
  .contact-page {
    width: 100%;
  }

  /* Hero Quote - Refined */
  .hero-quote {
    padding: 5rem 1.5rem 4.5rem;
    background: linear-gradient(to bottom, #fafafa 0%, #fff 100%);
    position: relative;
  }

  .hero-quote::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 50%;
    transform: translateX(-50%);
    width: 40px;
    height: 1px;
    background: linear-gradient(90deg, transparent, #d0d0d0, transparent);
  }

  /* Reveal animations - Content visible by default */
  .reveal {
    opacity: 1;
    transform: translateY(0);
    transition: opacity 0.6s cubic-bezier(0.16, 1, 0.3, 1), transform 0.6s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .reveal.animate {
    opacity: 0;
    transform: translateY(24px);
  }

  .reveal.visible {
    opacity: 1;
    transform: translateY(0);
  }

  .reveal-left {
    opacity: 1;
    transform: translateX(0);
    transition: opacity 0.6s cubic-bezier(0.16, 1, 0.3, 1), transform 0.6s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .reveal-left.animate {
    opacity: 0;
    transform: translateX(-40px);
  }

  .reveal-left.visible {
    opacity: 1;
    transform: translateX(0);
  }

  .reveal-right {
    opacity: 1;
    transform: translateX(0);
    transition: opacity 0.6s cubic-bezier(0.16, 1, 0.3, 1) var(--delay, 0s), transform 0.6s cubic-bezier(0.16, 1, 0.3, 1) var(--delay, 0s);
  }

  .reveal-right.animate {
    opacity: 0;
    transform: translateX(40px);
  }

  .reveal-right.visible {
    opacity: 1;
    transform: translateX(0);
  }

  .reveal-fade {
    opacity: 1;
    transition: opacity 0.6s cubic-bezier(0.16, 1, 0.3, 1) var(--delay, 0s);
  }

  .reveal-fade.animate {
    opacity: 0;
  }

  .reveal-fade.visible {
    opacity: 1;
  }

  .quote-container {
    max-width: 720px;
    margin: 0 auto;
  }

  .quote {
    text-align: center;
    position: relative;
  }

  .quote-decoration {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 1.25rem;
    margin-bottom: 2rem;
  }

  .quote-line {
    flex: 1;
    max-width: 60px;
    height: 1px;
    background: linear-gradient(to var(--dir, right), #e0e0e0, transparent);
  }

  .quote-line:last-child {
    --dir: left;
  }

  .quote-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    color: #d0d0d0;
    transition: color 0.3s ease;
  }

  .quote:hover .quote-icon {
    color: #aaa;
  }

  .quote p {
    font-size: clamp(1.25rem, 2.8vw, 1.5rem);
    font-weight: 400;
    font-style: italic;
    line-height: 1.7;
    color: #222;
    letter-spacing: -0.01em;
    margin: 0;
  }

  .quote-author {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.75rem;
    margin-top: 2rem;
  }

  .author-line {
    width: 20px;
    height: 1px;
    background: #d0d0d0;
  }

  .author-name {
    font-size: 0.625rem;
    font-weight: 600;
    letter-spacing: 0.18em;
    text-transform: uppercase;
    color: #666;
  }

  /* Main Section - Refined */
  .main-section {
    padding: 4rem 1.5rem 5rem;
  }

  .main-container {
    max-width: 1040px;
    margin: 0 auto;
    display: grid;
    grid-template-columns: 1fr;
    gap: 3rem;
  }

  .image-column {
    order: 2;
  }

  .main-image {
    margin: 0;
    height: 100%;
    min-height: 480px;
    overflow: hidden;
    border-radius: 2px;
    position: relative;
    cursor: pointer;
    box-shadow: 0 4px 24px rgba(0, 0, 0, 0.06);
    transition: box-shadow 0.6s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .main-image:hover {
    box-shadow: 0 8px 40px rgba(0, 0, 0, 0.12);
  }

  .main-image::after {
    content: '';
    position: absolute;
    inset: 0;
    background: rgba(0, 0, 0, 0.15);
    opacity: 0;
    transition: opacity 0.5s cubic-bezier(0.16, 1, 0.3, 1);
    pointer-events: none;
  }

  .main-image:hover::after {
    opacity: 1;
  }

  .main-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center 15%;
    transition: transform 0.7s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .main-image:hover img {
    transform: scale(1.02);
  }

  .content-column {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    gap: 1.75rem;
    order: 1;
  }

  /* Block Styles - Refined */
  .block-label {
    display: block;
    font-size: 0.625rem;
    font-weight: 600;
    letter-spacing: 0.2em;
    text-transform: uppercase;
    color: #888;
    margin-bottom: 0.75rem;
  }

  .block-title {
    font-size: clamp(1.375rem, 3vw, 1.75rem);
    font-weight: 500;
    letter-spacing: -0.02em;
    color: #111;
    margin: 0 0 0.75rem;
    line-height: 1.25;
  }

  .block-text {
    font-size: 0.9375rem;
    line-height: 1.7;
    color: #666;
    margin: 0;
  }

  /* Contact Items - Refined */
  .contact-items {
    display: flex;
    flex-direction: column;
    gap: 0;
    margin-top: 1.5rem;
  }

  .contact-item {
    display: flex;
    align-items: center;
    gap: 0.875rem;
    padding: 1rem 0;
    text-decoration: none;
    color: inherit;
    border-bottom: 1px solid #f0f0f0;
    transition: all 0.35s cubic-bezier(0.16, 1, 0.3, 1);
    position: relative;
    cursor: pointer;
  }

  .contact-item:first-child {
    border-top: 1px solid #f0f0f0;
  }

  .contact-item::before {
    content: '';
    position: absolute;
    left: 0;
    top: 0;
    bottom: 0;
    width: 2px;
    background: #111;
    transform: scaleY(0);
    transition: transform 0.3s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .contact-item:hover {
    padding-left: 0.75rem;
    border-color: #eaeaea;
  }

  .contact-item:hover::before {
    transform: scaleY(1);
  }

  .item-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    background: #111;
    border-radius: 8px;
    color: #fff;
    flex-shrink: 0;
    transition: all 0.3s cubic-bezier(0.34, 1.56, 0.64, 1);
  }

  .contact-item:hover .item-icon {
    transform: scale(1.06);
    box-shadow: 0 6px 20px rgba(0, 0, 0, 0.12);
  }

  .item-content {
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: 0.125rem;
  }

  .item-label {
    font-size: 0.625rem;
    font-weight: 600;
    letter-spacing: 0.14em;
    text-transform: uppercase;
    color: #999;
    transition: color 0.3s ease;
  }

  .contact-item:hover .item-label {
    color: #666;
  }

  .item-text {
    font-size: 0.9375rem;
    font-weight: 500;
    color: #222;
    transition: all 0.3s ease;
  }

  .contact-item:hover .item-text {
    transform: translateX(2px);
  }

  .item-arrow {
    color: #ddd;
    opacity: 0;
    transform: translateX(-6px);
    transition: all 0.3s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .contact-item:hover .item-arrow {
    opacity: 1;
    transform: translateX(0);
    color: #444;
  }

  /* Divider - Refined */
  .divider {
    height: 1px;
    margin: 0.25rem 0;
    background: linear-gradient(
      to right,
      transparent,
      #eaeaea 10%,
      #eaeaea 90%,
      transparent
    );
  }

  /* Studio Block - Refined & Professional */
  .studio-card {
    background: #f8f8f8;
    border: 1px solid #eaeaea;
    border-radius: 12px;
    padding: 1.25rem;
    position: relative;
    overflow: hidden;
    transition: all 0.4s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .studio-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 2px;
    background: #111;
    transform: scaleX(0);
    transform-origin: left;
    transition: transform 0.4s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .studio-card:hover::before {
    transform: scaleX(1);
  }

  .studio-card:hover {
    background: #fff;
    border-color: #e5e5e5;
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.05);
  }

  .studio-card-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: 1rem;
  }

  .studio-label {
    font-size: 0.625rem;
    font-weight: 600;
    letter-spacing: 0.18em;
    text-transform: uppercase;
    color: #777;
  }

  .studio-accent {
    color: #ccc;
    transition: all 0.35s ease;
  }

  .studio-card:hover .studio-accent {
    color: #777;
    transform: rotate(90deg);
  }

  .studio-link-enhanced {
    display: flex;
    align-items: flex-start;
    gap: 0.875rem;
    text-decoration: none;
    color: inherit;
    cursor: pointer;
  }

  .studio-visual {
    position: relative;
    flex-shrink: 0;
  }

  .studio-avatar-enhanced {
    width: 56px;
    height: 56px;
    border-radius: 50%;
    overflow: hidden;
    margin: 0;
    border: 2px solid #fff;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
    transition: all 0.35s cubic-bezier(0.16, 1, 0.3, 1);
    position: relative;
    z-index: 2;
  }

  .studio-card:hover .studio-avatar-enhanced {
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.1);
  }

  .studio-avatar-enhanced img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.4s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .studio-card:hover .studio-avatar-enhanced img {
    transform: scale(1.04);
  }

  .studio-pulse {
    position: absolute;
    inset: -3px;
    border-radius: 50%;
    border: 1.5px solid #111;
    opacity: 0;
    transform: scale(0.95);
    transition: all 0.3s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .studio-card:hover .studio-pulse {
    opacity: 0.2;
    transform: scale(1.06);
  }

  .studio-content {
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: 0.125rem;
    padding-top: 0.125rem;
  }

  .studio-handle {
    font-size: 1rem;
    font-weight: 600;
    color: #111;
    letter-spacing: -0.01em;
    transition: transform 0.3s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .studio-card:hover .studio-handle {
    transform: translateX(2px);
  }

  .studio-description {
    font-size: 0.8125rem;
    line-height: 1.5;
    color: #888;
  }

  .studio-meta {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    margin-top: 0.5rem;
    padding-top: 0.5rem;
    border-top: 1px solid #f0f0f0;
  }

  .studio-platform {
    display: flex;
    align-items: center;
    gap: 0.35rem;
    font-size: 0.6875rem;
    font-weight: 500;
    color: #aaa;
    text-transform: uppercase;
    letter-spacing: 0.06em;
  }

  .studio-cta {
    display: flex;
    align-items: center;
    gap: 0.35rem;
    font-size: 0.6875rem;
    font-weight: 600;
    color: #444;
    text-transform: uppercase;
    letter-spacing: 0.06em;
    margin-left: auto;
    transition: all 0.3s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .studio-cta svg {
    transition: transform 0.3s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .studio-card:hover .studio-cta {
    color: #111;
  }

  .studio-card:hover .studio-cta svg {
    transform: translateX(2px);
  }

  /* CV Block - Refined */
  .cv-block {
    margin-top: 0.25rem;
  }

  .cv-button {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.75rem 1.25rem;
    background: #111;
    color: #fff;
    text-decoration: none;
    font-size: 0.8125rem;
    font-weight: 500;
    letter-spacing: 0.01em;
    border-radius: 6px;
    transition: all 0.35s cubic-bezier(0.16, 1, 0.3, 1);
    cursor: pointer;
  }

  .cv-button:hover {
    background: #222;
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(0, 0, 0, 0.12);
  }

  .cv-button svg {
    transition: transform 0.3s cubic-bezier(0.34, 1.56, 0.64, 1);
  }

  .cv-button:hover svg {
    transform: translateY(2px);
  }

  .cv-button:active {
    transform: translateY(0);
  }

  /* Newsletter Section - Refined */
  .newsletter-section {
    padding: 4.5rem 1.5rem;
    background: #0c0c0c;
  }

  .newsletter-container {
    max-width: 480px;
    margin: 0 auto;
    text-align: center;
  }

  .newsletter-content {
    margin-bottom: 1.75rem;
  }

  .newsletter-label {
    display: block;
    font-size: 0.625rem;
