---
import { Image } from "astro:assets";
import { resolveImage, processImageUrl } from "@utils/images";
import type { WorkCardProps } from "@/types";

type Props = WorkCardProps;

const {
  href,
  title,
  subtitle,
  imageUrl,
  imageAlt,
  isAboveFold = false,
} = Astro.props;

const imageMeta = resolveImage(imageUrl);
const fallbackSrc = !imageMeta ? processImageUrl(imageUrl || "") : "";
---

<a href={href} class="card">
  {
    imageMeta ? (
      <Image
        src={imageMeta}
        alt={imageAlt || title}
        width={400}
        height={400}
        loading={isAboveFold ? "eager" : "lazy"}
        decoding="async"
        class="card-img"
      />
    ) : fallbackSrc ? (
      <img
        src={fallbackSrc}
        alt={imageAlt || title}
        width="400"
        height="400"
        loading={isAboveFold ? "eager" : "lazy"}
        decoding="async"
        class="card-img"
      />
    ) : (
      <div class="card-empty">{title}</div>
    )
  }

  <div class="card-overlay"></div>

  <div class="card-content">
    {subtitle && <span class="card-collection">{subtitle}</span>}
    <h3 class="card-title">{title}</h3>
    <span class="card-arrow" aria-hidden="true">
      <svg
        width="18"
        height="18"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="1.5"
      >
        <path
          d="M7 17L17 7M17 7H7M17 7V17"
          stroke-linecap="round"
          stroke-linejoin="round"
        />
      </svg>
    </span>
  </div>
</a>

<style>
  .card {
    position: relative;
    display: block;
    aspect-ratio: 1;
    overflow: hidden;
    background: #000;
    text-decoration: none;
    border-radius: 0;
    border: 1px solid rgba(255, 255, 255, 0.08);
    transition: all 0.6s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .card::before {
    content: "";
    position: absolute;
    inset: 0;
    background: linear-gradient(
      135deg,
      rgba(212, 81, 30, 0.1) 0%,
      transparent 50%
    );
    opacity: 0;
    transition: opacity 0.6s ease;
    z-index: 1;
  }

  .card:hover::before {
    opacity: 1;
  }

  .card:hover {
    border-color: rgba(212, 81, 30, 0.5);
    box-shadow:
      0 20px 60px rgba(0, 0, 0, 0.6),
      0 0 0 1px rgba(212, 81, 30, 0.3),
      inset 0 0 60px rgba(212, 81, 30, 0.05);
    transform: translateY(-4px);
  }

  .card-img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition:
      transform 0.9s cubic-bezier(0.16, 1, 0.3, 1),
      filter 0.6s ease;
    filter: grayscale(0.3) brightness(0.85);
  }

  .card:hover .card-img {
    transform: scale(1.1);
    filter: grayscale(0) brightness(0.6);
  }

  .card-empty {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1rem;
    color: rgba(255, 255, 255, 0.4);
    background: #0a0a0a;
  }

  .card-overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(
      to top,
      rgba(0, 0, 0, 0.95) 0%,
      rgba(0, 0, 0, 0.6) 30%,
      rgba(0, 0, 0, 0.2) 60%,
      transparent 100%
    );
    opacity: 0.8;
    transition: opacity 0.6s ease;
    z-index: 2;
  }

  .card:hover .card-overlay {
    opacity: 1;
  }

  .card-content {
    position: absolute;
    inset: 0;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: flex-end;
    padding: 1.5rem;
    padding-bottom: 2rem;
    text-align: center;
    z-index: 3;
  }

  .card-collection {
    font-size: 0.75rem;
    font-weight: 600;
    letter-spacing: 0.15em;
    text-transform: uppercase;
    color: rgba(212, 81, 30, 0.9);
    margin-bottom: 0.75rem;
    transform: translateY(20px);
    opacity: 0;
    transition:
      transform 0.6s cubic-bezier(0.16, 1, 0.3, 1) 0.05s,
      opacity 0.6s ease 0.05s;
    text-shadow: 0 2px 10px rgba(0, 0, 0, 0.5);
  }

  .card:hover .card-collection {
    transform: translateY(0);
    opacity: 1;
  }

  .card-title {
    font-size: clamp(1.25rem, 3vw, 1.75rem);
    font-weight: 700;
    color: #fff;
    letter-spacing: -0.02em;
    line-height: 1.2;
    margin: 0;
    font-family: "Exo 2", system-ui, sans-serif;
    text-transform: uppercase;
    transform: translateY(20px);
    opacity: 0;
    transition:
      transform 0.6s cubic-bezier(0.16, 1, 0.3, 1) 0.1s,
      opacity 0.6s ease 0.1s,
      color 0.3s ease;
    text-shadow: 0 4px 20px rgba(0, 0, 0, 0.8);
  }

  .card:hover .card-title {
    transform: translateY(0);
    opacity: 1;
    color: rgba(255, 255, 255, 0.95);
  }

  .card-arrow {
    margin-top: 1.25rem;
    width: 40px;
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: rgba(212, 81, 30, 0.15);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(212, 81, 30, 0.3);
    border-radius: 50%;
    color: rgba(212, 81, 30, 0.9);
    transform: translateY(20px) scale(0.8);
    opacity: 0;
    transition:
      transform 0.6s cubic-bezier(0.16, 1, 0.3, 1) 0.15s,
      opacity 0.6s ease 0.15s,
      background 0.3s ease,
      border-color 0.3s ease;
  }

  .card:hover .card-arrow {
    transform: translateY(0) scale(1);
    opacity: 1;
    background: rgba(212, 81, 30, 0.25);
    border-color: rgba(212, 81, 30, 0.5);
  }

  .card:focus-visible {
    outline: 2px solid rgba(212, 81, 30, 0.8);
    outline-offset: 3px;
  }

  .card:focus-visible .card-collection,
  .card:focus-visible .card-title,
  .card:focus-visible .card-arrow {
    transform: translateY(0) scale(1);
    opacity: 1;
  }

  @media (min-width: 768px) {
    .card-content {
      padding: 2rem;
      padding-bottom: 2.5rem;
    }

    .card-collection {
      font-size: 0.75rem;
      margin-bottom: 1rem;
    }

    .card-arrow {
      width: 48px;
      height: 48px;
      margin-top: 1.5rem;
    }
  }

  @media (prefers-reduced-motion: reduce) {
    .card,
    .card::before,
    .card-img,
    .card-overlay,
    .card-collection,
    .card-title,
    .card-arrow {
      transition: none;
    }

    .card:hover .card-img {
      transform: none;
      filter: none;
    }

    .card-collection,
    .card-title,
    .card-arrow {
      opacity: 1;
      transform: none;
    }
  }
</style>
