---
import { Image } from "astro:assets";
import BannerImg from "/public/bannerimg.avif";

interface Props {
  title: string;
  subtitle?: string;
  backgroundImage?: string;
}

const { title, subtitle, backgroundImage } = Astro.props;
---

<section class="banner" aria-labelledby="banner-title">
  <!-- Background Image -->
  <div class="banner-bg">
    {
      backgroundImage ? (
        <img
          src={backgroundImage}
          alt=""
          role="presentation"
          class="banner-image"
          loading="eager"
          decoding="async"
          fetchpriority="high"
        />
      ) : (
        <Image
          src={BannerImg}
          alt=""
          role="presentation"
          class="banner-image"
          loading="eager"
          decoding="async"
          quality={85}
          format="avif"
        />
      )
    }

    <!-- Gradient Overlay -->
    <div class="banner-overlay" aria-hidden="true"></div>
  </div>

  <!-- Content -->
  <div class="banner-content">
    <h1 id="banner-title" class="banner-title">
      <span class="title-text">{title}</span>
    </h1>

    {
      subtitle && (
        <p class="banner-subtitle">
          <span class="subtitle-text">{subtitle}</span>
        </p>
      )
    }

    <!-- Decorative line -->
    <div class="banner-line" aria-hidden="true"></div>
  </div>
</section>

<style>
  .banner {
    position: relative;
    width: 100%;
    height: clamp(300px, 50vh, 500px);
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
  }

  .banner-bg {
    position: absolute;
    inset: 0;
  }

  .banner-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transform: scale(1.05);
    animation: subtle-zoom 20s ease-out forwards;
  }

  @keyframes subtle-zoom {
    to {
      transform: scale(1);
    }
  }

  .banner-overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(
      to bottom,
      rgba(0, 0, 0, 0.4) 0%,
      rgba(0, 0, 0, 0.6) 50%,
      rgba(0, 0, 0, 0.7) 100%
    );
  }

  .banner-content {
    position: relative;
    z-index: 10;
    text-align: center;
    padding: 2rem;
    max-width: 800px;
  }

  .banner-title {
    margin: 0;
    overflow: hidden;
  }

  .title-text {
    display: block;
    font-size: clamp(2rem, 8vw, 3.5rem);
    font-weight: 700;
    color: white;
    letter-spacing: -0.02em;
    line-height: 1.1;
    animation: slide-up 0.8s cubic-bezier(0.16, 1, 0.3, 1) forwards;
    opacity: 0;
    transform: translateY(100%);
  }

  .banner-subtitle {
    margin: 1rem 0 0;
    overflow: hidden;
  }

  .subtitle-text {
    display: block;
    font-size: clamp(1rem, 3vw, 1.5rem);
    font-weight: 400;
    color: rgba(255, 255, 255, 0.85);
    letter-spacing: 0.02em;
    animation: slide-up 0.8s cubic-bezier(0.16, 1, 0.3, 1) 0.1s forwards;
    opacity: 0;
    transform: translateY(100%);
  }

  .banner-line {
    width: 60px;
    height: 3px;
    background: white;
    margin: 1.5rem auto 0;
    animation: expand 0.6s cubic-bezier(0.16, 1, 0.3, 1) 0.3s forwards;
    transform: scaleX(0);
  }

  @keyframes slide-up {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes expand {
    to {
      transform: scaleX(1);
    }
  }

  /* Reduced motion */
  @media (prefers-reduced-motion: reduce) {
    .banner-image {
      animation: none;
      transform: scale(1);
    }

    .title-text,
    .subtitle-text {
      animation: none;
      opacity: 1;
      transform: none;
    }

    .banner-line {
      animation: none;
      transform: scaleX(1);
    }
  }

  /* Print styles */
  @media print {
    .banner {
      height: auto;
      min-height: 150px;
      background: #f5f5f5;
    }

    .banner-bg {
      display: none;
    }

    .title-text,
    .subtitle-text {
      color: black;
      opacity: 1;
      transform: none;
    }

    .banner-line {
      background: black;
      transform: scaleX(1);
    }
  }
</style>
