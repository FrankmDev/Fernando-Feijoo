---
import { Image } from "astro:assets";
import BannerImg from "/public/bannerimg.avif";
import type { ImageMetadata } from "astro";

interface Props {
  title: string;
  subtitle?: string;
  backgroundImage?: ImageMetadata | string;
}

const { title, subtitle, backgroundImage } = Astro.props;

// Determine if backgroundImage is an imported ImageMetadata or a string URL
const isImageMetadata = (img: unknown): img is ImageMetadata => {
  return typeof img === "object" && img !== null && "src" in img;
};

const bgImageMeta = backgroundImage && isImageMetadata(backgroundImage) ? backgroundImage : null;
const bgImageUrl = backgroundImage && typeof backgroundImage === "string" ? backgroundImage : null;
---

<section class="banner" aria-labelledby="banner-title">
  <!-- Background Image -->
  <div class="banner-bg">
    {
      bgImageMeta ? (
        <Image
          src={bgImageMeta}
          alt=""
          role="presentation"
          class="banner-image"
          loading="eager"
          decoding="async"
          fetchpriority="high"
        />
      ) : bgImageUrl ? (
        <img
          src={bgImageUrl}
          alt=""
          role="presentation"
          class="banner-image"
          loading="eager"
          decoding="async"
          fetchpriority="high"
        />
      ) : (
        <Image
          src={BannerImg}
          alt=""
          role="presentation"
          class="banner-image"
          loading="eager"
          decoding="async"
          quality={85}
          format="avif"
        />
      )
    }

    <!-- Gradient Overlay -->
    <div class="banner-overlay" aria-hidden="true"></div>
  </div>

  <!-- Content -->
  <div class="banner-content">
    <h1 id="banner-title" class="banner-title">
      <span class="title-text">{title}</span>
    </h1>

    {
      subtitle && (
        <p class="banner-subtitle">
          <span class="subtitle-text">{subtitle}</span>
        </p>
      )
    }

    <!-- Decorative elements -->
    <div class="banner-decoration" aria-hidden="true">
      <span class="decoration-line"></span>
      <span class="decoration-dot"></span>
      <span class="decoration-line"></span>
    </div>
  </div>
</section>

<style>
  .banner {
    position: relative;
    width: 100%;
    height: clamp(280px, 45vh, 480px);
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
  }

  .banner-bg {
    position: absolute;
    inset: 0;
  }

  .banner-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transform: scale(1.1);
    animation: subtle-zoom 18s ease-out forwards;
  }

  @keyframes subtle-zoom {
    to {
      transform: scale(1);
    }
  }

  .banner-overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(
      to bottom,
      rgba(0, 0, 0, 0.35) 0%,
      rgba(0, 0, 0, 0.55) 50%,
      rgba(0, 0, 0, 0.65) 100%
    );
  }

  .banner-content {
    position: relative;
    z-index: 10;
    text-align: center;
    padding: 2rem;
    max-width: 800px;
  }

  .banner-title {
    margin: 0;
    overflow: hidden;
  }

  .title-text {
    display: block;
    font-size: clamp(2rem, 7vw, 3.5rem);
    font-weight: 600;
    color: white;
    letter-spacing: -0.03em;
    line-height: 1.1;
    animation: slide-up 0.9s cubic-bezier(0.16, 1, 0.3, 1) forwards;
    opacity: 0;
    transform: translateY(100%);
  }

  .banner-subtitle {
    margin: 1.25rem 0 0;
    overflow: hidden;
  }

  .subtitle-text {
    display: block;
    font-size: clamp(1rem, 2.5vw, 1.375rem);
    font-weight: 400;
    color: rgba(255, 255, 255, 0.85);
    letter-spacing: 0.01em;
    animation: slide-up 0.9s cubic-bezier(0.16, 1, 0.3, 1) 0.1s forwards;
    opacity: 0;
    transform: translateY(100%);
  }

  .banner-decoration {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.75rem;
    margin-top: 1.75rem;
    animation: fade-in 0.8s cubic-bezier(0.16, 1, 0.3, 1) 0.4s forwards;
    opacity: 0;
  }

  .decoration-line {
    width: 40px;
    height: 1px;
    background: rgba(255, 255, 255, 0.4);
    animation: expand-line 0.8s cubic-bezier(0.16, 1, 0.3, 1) 0.6s forwards;
    transform: scaleX(0);
  }

  .decoration-dot {
    width: 5px;
    height: 5px;
    background: rgba(255, 255, 255, 0.6);
    border-radius: 50%;
    animation: scale-in 0.5s cubic-bezier(0.34, 1.56, 0.64, 1) 0.5s forwards;
    transform: scale(0);
  }

  @keyframes slide-up {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes fade-in {
    to {
      opacity: 1;
    }
  }

  @keyframes expand-line {
    to {
      transform: scaleX(1);
    }
  }

  @keyframes scale-in {
    to {
      transform: scale(1);
    }
  }

  /* Reduced motion */
  @media (prefers-reduced-motion: reduce) {
    .banner-image {
      animation: none;
      transform: scale(1);
    }

    .title-text,
    .subtitle-text,
    .banner-decoration,
    .decoration-line,
    .decoration-dot {
      animation: none;
      opacity: 1;
      transform: none;
    }
  }

  /* Print styles */
  @media print {
    .banner {
      height: auto;
      min-height: 150px;
      background: #f5f5f5;
    }

    .banner-bg {
      display: none;
    }

    .title-text,
    .subtitle-text {
      color: black;
      opacity: 1;
      transform: none;
    }

    .banner-decoration {
      display: none;
    }
  }
</style>
