---
import { Image } from "astro:assets";
import Cta from "@components/Cta.astro";

// Importamos la imagen desde /public como un asset optimizado
import BannerImg from "/public/bannerimg.jpg"; // Ajusta la ruta relativa según tu estructura

// Definimos las imágenes como un objeto tipado (aunque no se usan aquí, las dejo por si las necesitas)
const IMAGES = {
  Hero: "/public/heroSlider/hero-1.jpg",
  Profile: "/public/heroSlider/hero-2.jpg",
  About: "/public/heroSlider/hero-3.jpg",
} as const;
---

<section class="my-10 mx-auto" aria-label="Contacto y presentación">
  <div class="container mx-auto px-4 max-w-6xl grid grid-cols-1 md:grid-cols-2">
    <article class="bg-black text-white p-6 md:p-10">
      <h2 class="text-2xl md:text-3xl font-bold mb-4">Contact me</h2>
      <p class="text-sm md:text-base">
        Lorem ipsum dolor, sit amet consectetur adipisicing elit.
        Exercitationem, impedit et dolorum, fugit saepe aliquid quod cumque
        nulla quisquam aspernatur dolore consequatur deserunt quaerat possimus,
        non aliquam repudiandae. Totam, quae.
      </p>
      <Cta href="/contact" label="Contact" class="mt-6" />
    </article>
    <figure class="w-full h-full">
      <Image
        src={BannerImg}
        alt="Fotografía representativa del artista"
        width={600}
        height={400}
        class="w-full h-full object-cover rounded-lg"
        loading="lazy"
      />
    </figure>
  </div>
</section>

<style>
  article {
    display: flex;
    flex-direction: column;
    justify-content: center;
  }
</style>
