---
import { Image } from "astro:assets";
import BannerImg from "/public/bannerimg.avif";
---

<section class="contact-banner reveal">
  <div class="banner-inner">
    <!-- Image Side -->
    <div class="banner-image">
      <Image
        src={BannerImg}
        alt="Fernando Feijoo in his studio"
        width={800}
        height={900}
        class="image"
        loading="lazy"
        decoding="async"
        quality={85}
        format="webp"
      />
      <div class="image-overlay"></div>
    </div>

    <!-- Content Side -->
    <div class="banner-content">
      <div class="content-inner">
        <div class="content-header">
          <span class="label">
            <span class="label-line"></span>
            <span class="label-text">Let's Connect</span>
          </span>
        </div>

        <h2 class="title">
          <span class="title-line">Ready to create</span>
          <span class="title-line">something together?</span>
        </h2>

        <p class="description">
          Whether you're interested in commissioning a piece, acquiring existing
          work, or simply want to discuss art â€” I'd love to hear from you.
        </p>

        <div class="cta-wrapper">
          <a href="/contact" class="cta">
            <span class="cta-text">Get in Touch</span>
            <span class="cta-arrow">
              <svg
                width="20"
                height="20"
                viewBox="0 0 20 20"
                fill="none"
                aria-hidden="true"
              >
                <path
                  d="M4 10h12M12 6l4 4-4 4"
                  stroke="currentColor"
                  stroke-width="1.5"
                  stroke-linecap="round"
                  stroke-linejoin="round"></path>
              </svg>
            </span>
          </a>

          <a href="mailto:contact@fernandofeijoo.com" class="cta-secondary">
            <span class="cta-secondary-icon">
              <svg
                width="18"
                height="18"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="1.5"
              >
                <rect x="2" y="4" width="20" height="16" rx="2"></rect>
                <path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"></path>
              </svg>
            </span>
            <span class="cta-secondary-text">contact@fernandofeijoo.com</span>
          </a>
        </div>
      </div>

      <!-- Decorative Element -->
      <div class="decor-corner"></div>
    </div>
  </div>
</section>

<style>
  .contact-banner {
    width: 100%;
    max-width: 1200px;
    margin: 0 auto;
    padding: 3rem 1.25rem;
  }

  .banner-inner {
    display: grid;
    grid-template-columns: 1fr;
    min-height: 480px;
    position: relative;
    border-radius: 2px;
    overflow: hidden;
    box-shadow: 0 8px 40px rgba(0, 0, 0, 0.08);
  }

  /* Image - Refined */
  .banner-image {
    position: relative;
    aspect-ratio: 4/3;
    overflow: hidden;
    order: 1;
  }

  .image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.7s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .banner-image:hover .image {
    transform: scale(1.02);
  }

  .image-overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(
      to bottom,
      rgba(0, 0, 0, 0) 60%,
      rgba(0, 0, 0, 0.2) 100%
    );
    pointer-events: none;
  }

  /* Content - Refined */
  .banner-content {
    position: relative;
    display: flex;
    align-items: center;
    background: #0c0c0c;
    padding: 2.5rem 1.5rem;
    order: 2;
    overflow: hidden;
  }

  .content-inner {
    max-width: 460px;
    position: relative;
    z-index: 1;
  }

  .content-header {
    margin-bottom: 1.5rem;
  }

  .label {
    display: inline-flex;
    align-items: center;
    gap: 0.75rem;
  }

  .label-line {
    display: block;
    width: 24px;
    height: 1px;
    background: rgba(255, 255, 255, 0.25);
  }

  .label-text {
    font-size: 0.6875rem;
    font-weight: 600;
    letter-spacing: 0.18em;
    text-transform: uppercase;
    color: rgba(255, 255, 255, 0.45);
  }

  .title {
    font-size: clamp(1.5rem, 4.5vw, 2.25rem);
    font-weight: 500;
    letter-spacing: -0.025em;
    line-height: 1.2;
    color: #fff;
    margin: 0 0 1.25rem;
  }

  .title-line {
    display: block;
  }

  .description {
    font-size: 0.9375rem;
    line-height: 1.7;
    color: rgba(255, 255, 255, 0.6);
    margin: 0 0 2rem;
    max-width: 380px;
  }

  /* CTA Wrapper - Refined */
  .cta-wrapper {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  /* Primary CTA - Refined */
  .cta {
    display: inline-flex;
    align-items: center;
    gap: 0.75rem;
    padding: 0.875rem 1.5rem;
    background: #fff;
    color: #111;
    text-decoration: none;
    font-size: 0.8125rem;
    font-weight: 500;
    letter-spacing: 0.01em;
    border-radius: 2px;
    position: relative;
    overflow: hidden;
    transition: all 0.35s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .cta::before {
    content: "";
    position: absolute;
    inset: 0;
    background: #1a1a1a;
    transform: translateX(-101%);
    transition: transform 0.35s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .cta:hover::before {
    transform: translateX(0);
  }

  .cta:hover {
    color: #fff;
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.3);
  }

  .cta-text,
  .cta-arrow {
    position: relative;
    z-index: 1;
  }

  .cta-arrow {
    display: flex;
    transition: transform 0.35s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .cta:hover .cta-arrow {
    transform: translateX(3px);
  }

  .cta:focus-visible {
    outline: 2px solid rgba(255, 255, 255, 0.5);
    outline-offset: 3px;
  }

  /* Secondary CTA - Refined */
  .cta-secondary {
    display: inline-flex;
    align-items: center;
    gap: 0.625rem;
    color: rgba(255, 255, 255, 0.5);
    text-decoration: none;
    font-size: 0.8125rem;
    transition: all 0.3s ease;
    padding: 0.25rem 0;
  }

  .cta-secondary:hover {
    color: rgba(255, 255, 255, 0.9);
  }

  .cta-secondary-icon {
    display: flex;
    opacity: 0.6;
    transition: opacity 0.3s ease;
  }

  .cta-secondary:hover .cta-secondary-icon {
    opacity: 1;
  }

  .cta-secondary-text {
    border-bottom: 1px solid transparent;
    transition: border-color 0.3s ease;
  }

  .cta-secondary:hover .cta-secondary-text {
    border-bottom-color: rgba(255, 255, 255, 0.25);
  }

  /* Decorative Corner - Refined */
  .decor-corner {
    position: absolute;
    bottom: 0;
    right: 0;
    width: 80px;
    height: 80px;
    border: 1px solid rgba(255, 255, 255, 0.06);
    border-bottom: none;
    border-right: none;
    pointer-events: none;
  }

  /* Desktop - Refined */
  @media (min-width: 768px) {
    .contact-banner {
      padding: 4rem 2rem;
    }

    .banner-inner {
      grid-template-columns: 1fr 1fr;
      min-height: 480px;
    }

    .banner-image {
      aspect-ratio: auto;
      order: 2;
    }

    .banner-content {
      padding: 3rem 2.5rem;
      order: 1;
    }

    .description {
      font-size: 0.9375rem;
    }

    .cta-wrapper {
      flex-direction: row;
      align-items: center;
      gap: 1.5rem;
    }

    .decor-corner {
      width: 100px;
      height: 100px;
    }
  }

  @media (min-width: 1024px) {
    .contact-banner {
      padding: 5rem 2rem;
    }

    .banner-content {
      padding: 3.5rem 3rem;
    }

    .content-header {
      margin-bottom: 1.75rem;
    }

    .label-line {
      width: 32px;
    }

    .description {
      margin-bottom: 2.25rem;
    }

    .decor-corner {
      width: 120px;
      height: 120px;
    }
  }

  /* Reveal animation */
  .reveal {
    opacity: 0;
    transform: translateY(20px);
    transition: opacity 0.7s cubic-bezier(0.16, 1, 0.3, 1), transform 0.7s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .reveal.visible {
    opacity: 1;
    transform: translateY(0);
  }

  /* Reduced motion */
  @media (prefers-reduced-motion: reduce) {
    .image,
    .cta,
    .cta::before,
    .cta-arrow,
    .cta-secondary,
    .cta-secondary-icon,
    .cta-secondary-text,
    .reveal {
      transition: none;
    }

    .banner-image:hover .image {
      transform: none;
    }

    .reveal {
      opacity: 1;
      transform: none;
    }

    .cta:hover::before {
      transform: translateX(-101%);
    }

    .cta:hover .cta-arrow {
      transform: none;
    }
  }

  /* Print */
  @media print {
    .contact-banner {
      break-inside: avoid;
      padding: 2rem 0;
    }

    .banner-image,
    .decor-corner {
      display: none;
    }

    .banner-inner {
      grid-template-columns: 1fr;
      box-shadow: none;
    }

    .banner-content {
      background: #fff;
      border: 1px solid #000;
    }

    .title,
    .description,
    .label-text {
      color: #000;
    }

    .cta {
      border: 1px solid #000;
    }

    .cta-secondary {
      color: #000;
    }
  }
</style>

<script>
  // Reveal animation on scroll
  document.addEventListener('DOMContentLoaded', () => {
    const revealBanner = document.querySelector('.contact-banner.reveal');
    
    if (revealBanner) {
      const observer = new IntersectionObserver(
        (entries) => {
          entries.forEach((entry) => {
            if (entry.isIntersecting) {
              entry.target.classList.add('visible');
              observer.unobserve(entry.target);
            }
          });
        },
        { threshold: 0.2 }
      );
      
      observer.observe(revealBanner);
    }
  });
</script>
