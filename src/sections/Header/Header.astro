---
import Logo from "@components/Header/Logo.astro";
import { NAV_ITEMS } from "@constants";
import { isCurrentPage } from "@utils/navigation";

const currentPath = Astro.url.pathname;

---

<header class="header" id="header" transition:name="header" transition:persist>
  <div class="header-inner">
    <Logo />

    <!-- Desktop Nav -->
    <nav class="nav-desktop" aria-label="Main navigation">
      {
        NAV_ITEMS.map((item) => (
          <a
            href={item.href}
            class:list={["nav-link", { active: isCurrentPage(item.href, currentPath) }]}
            aria-current={isCurrentPage(item.href, currentPath) ? "page" : undefined}
          >
            {item.text}
          </a>
        ))
      }
    </nav>

    <!-- Mobile Toggle -->
    <button
      class="menu-toggle"
      id="menuToggle"
      type="button"
      aria-label="Menu"
      aria-expanded="false"
      aria-controls="mobileMenu"
    >
      <span class="toggle-bar"></span>
      <span class="toggle-bar"></span>
    </button>
  </div>
</header>

<!-- Mobile Menu Overlay -->
<div class="mobile-overlay" id="mobileMenu" aria-hidden="true">
  <nav class="mobile-nav">
    {
      NAV_ITEMS.map((item, i) => (
        <a
          href={item.href}
          class:list={["mobile-link", { active: isCurrentPage(item.href, currentPath) }]}
          aria-current={isCurrentPage(item.href, currentPath) ? "page" : undefined}
          style={`--i: ${i}`}
        >
          {item.text}
        </a>
      ))
    }
  </nav>
</div>

<!-- Header Spacer -->
<div class="header-spacer"></div>

<style>
  /* Header Base */
  .header {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 1000;
    background: white;
    transition:
      background 0.3s ease,
      box-shadow 0.3s ease;
  }

  .header.scrolled {
    box-shadow: 0 1px 0 rgba(0, 0, 0, 0.08);
  }

  .header.menu-open {
    background: black;
  }

  .header-inner {
    display: flex;
    align-items: center;
    justify-content: space-between;
    max-width: 1400px;
    margin: 0 auto;
    padding: 1.25rem 1.5rem;
  }

  .header-spacer {
    height: 4.5rem;
  }

  /* Desktop Nav */
  .nav-desktop {
    display: none;
    gap: 3rem;
  }

  .nav-link {
    position: relative;
    font-size: 0.875rem;
    font-weight: 500;
    color: #18181b;
    text-decoration: none;
    padding: 0.25rem 0;
  }

  .nav-link::after {
    content: "";
    position: absolute;
    left: 0;
    bottom: -2px;
    width: 100%;
    height: 1.5px;
    background: currentColor;
    transform: scaleX(0);
    transform-origin: right;
    transition: transform 0.3s ease;
  }

  .nav-link:hover::after,
  .nav-link.active::after {
    transform: scaleX(1);
    transform-origin: left;
  }

  /* Menu Toggle */
  .menu-toggle {
    position: relative;
    z-index: 1001;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    width: 48px;
    height: 48px;
    gap: 8px;
    background: none;
    border: none;
    cursor: pointer;
    padding: 0;
  }

  .toggle-bar {
    display: block;
    width: 24px;
    height: 2px;
    background: #18181b;
    transition:
      transform 0.4s cubic-bezier(0.23, 1, 0.32, 1),
      background 0.3s ease;
  }

  /* Toggle Open State */
  .header.menu-open .toggle-bar {
    background: white;
  }

  .header.menu-open .toggle-bar:first-child {
    transform: translateY(5px) rotate(45deg);
  }

  .header.menu-open .toggle-bar:last-child {
    transform: translateY(-5px) rotate(-45deg);
  }

  /* Mobile Overlay */
  .mobile-overlay {
    position: fixed;
    inset: 0;
    z-index: 999;
    background: black;
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0;
    visibility: hidden;
    transition:
      opacity 0.4s ease,
      visibility 0.4s ease;
  }

  .mobile-overlay.open {
    opacity: 1;
    visibility: visible;
  }

  .mobile-nav {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.5rem;
  }

  .mobile-link {
    font-size: clamp(2rem, 8vw, 3.5rem);
    font-weight: 600;
    color: white;
    text-decoration: none;
    padding: 0.75rem 1.5rem;
    opacity: 0;
    transform: translateY(30px);
    transition:
      opacity 0.5s ease,
      transform 0.5s ease,
      color 0.2s ease;
    transition-delay: calc(var(--i) * 0.08s);
  }

  .mobile-overlay.open .mobile-link {
    opacity: 1;
    transform: translateY(0);
  }

  .mobile-link:hover,
  .mobile-link:focus-visible {
    color: rgba(255, 255, 255, 0.6);
  }

  .mobile-link.active {
    color: rgba(255, 255, 255, 0.5);
  }

  .mobile-link:focus-visible {
    outline: 2px solid white;
    outline-offset: 4px;
  }

  /* Logo color change when menu open */
  .header.menu-open :global(a) {
    color: white;
  }

  /* Desktop breakpoint */
  @media (min-width: 768px) {
    .nav-desktop {
      display: flex;
    }

    .menu-toggle {
      display: none;
    }

    .mobile-overlay {
      display: none;
    }
  }

  /* Reduced motion */
  @media (prefers-reduced-motion: reduce) {
    .header,
    .toggle-bar,
    .mobile-overlay,
    .mobile-link,
    .nav-link::after {
      transition: none;
    }

    .mobile-link {
      opacity: 1;
      transform: none;
    }
  }
</style>

<script>
  import { isCurrentPage } from "@utils/navigation";

  /**
   * Manages the mobile menu state and interactions
   */
  class MobileMenuController {
    private header: HTMLElement | null;
    private toggle: HTMLElement | null;
    private overlay: HTMLElement | null;
    private links: NodeListOf<HTMLElement> | null = null;
    private isOpen = false;

    constructor() {
      this.header = document.getElementById("header");
      this.toggle = document.getElementById("menuToggle");
      this.overlay = document.getElementById("mobileMenu");
      this.links = this.overlay?.querySelectorAll(".mobile-link") ?? null;
      this.init();
    }

    private init(): void {
      this.toggle?.addEventListener("click", () => this.toggleMenu());
      this.links?.forEach((link) => {
        link.addEventListener("click", () => this.close());
      });

      document.addEventListener("keydown", (e) => {
        if (e.key === "Escape" && this.isOpen) this.close();
      });
    }

    open(): void {
      this.isOpen = true;
      this.header?.classList.add("menu-open");
      this.overlay?.classList.add("open");
      this.overlay?.setAttribute("aria-hidden", "false");
      this.toggle?.setAttribute("aria-expanded", "true");
      document.body.style.overflow = "hidden";
    }

    close(): void {
      this.isOpen = false;
      this.header?.classList.remove("menu-open");
      this.overlay?.classList.remove("open");
      this.overlay?.setAttribute("aria-hidden", "true");
      this.toggle?.setAttribute("aria-expanded", "false");
      document.body.style.overflow = "";
    }

    toggleMenu(): void {
      this.isOpen ? this.close() : this.open();
    }
  }

  /**
   * Manages scroll state for header styling
   */
  class ScrollController {
    private header: HTMLElement | null;
    private ticking = false;

    constructor() {
      this.header = document.getElementById("header");
      this.init();
    }

    private init(): void {
      window.addEventListener("scroll", () => {
        if (!this.ticking) {
          requestAnimationFrame(() => {
            this.updateScrollState();
            this.ticking = false;
          });
          this.ticking = true;
        }
      });
      this.updateScrollState();
    }

    private updateScrollState(): void {
      if (window.scrollY > 10) {
        this.header?.classList.add("scrolled");
      } else {
        this.header?.classList.remove("scrolled");
      }
    }
  }

  /**
   * Updates active state of navigation links
   */
  function updateActiveNavLinks(): void {
    const currentPath = window.location.pathname;
    const navSelectors = [".nav-link", ".mobile-link"];

    navSelectors.forEach((selector) => {
      document.querySelectorAll<HTMLElement>(selector).forEach((link) => {
        const href = link.getAttribute("href") || "";
        const isActive = isCurrentPage(href, currentPath);

        link.classList.toggle("active", isActive);
        link.toggleAttribute("aria-current", isActive);
        if (isActive) {
          link.setAttribute("aria-current", "page");
        } else {
          link.removeAttribute("aria-current");
        }
      });
    });
  }

  /**
   * Initialize all header functionality
   */
  function initHeader(): void {
    new MobileMenuController();
    new ScrollController();
    updateActiveNavLinks();
  }

  // Run on initial load
  initHeader();

  // Run after View Transitions navigation
  document.addEventListener("astro:after-swap", initHeader);
  document.addEventListener("astro:page-load", updateActiveNavLinks);
</script>
