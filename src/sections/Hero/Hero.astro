      font-family: "Exo", system-ui, sans-serif;
      font-size: clamp(1.75rem, 2.5vw, 2.25rem);
    }
  }

  /* Reduced motion */
  @media (prefers-reduced-motion: reduce) {
    .card-img,
    .card-overlay,
    .card-content,
    .card-category,
    .card-title,
    /* .card-index, */
    .card-line-accent,
    .card-frame {
      transition: none;
    }

    .card:hover .card-img {
      transform: none;
    }

    .card-line-accent {
      transform: translateX(0);
    }

    .card-overlay,
