---
import Socials from "@components/Hero/Socials.astro";
import SliderHero from "@components/SliderHero.astro";
import ContactBanner from "@components/Hero/ContactBanner.astro";
import { WORKS } from "@data/works";
import Cta from "@components/Cta.astro";
import { processImageUrl } from "@utils/images";
import type { Category, Work } from "@data/works";

interface ProcessedWork extends Work {
  categorySlug: string;
  categoryTitle: string;
  collectionSlug?: string;
  collectionTitle?: string;
}

interface GallerySection {
  id: string;
  title: string;
  items: ProcessedWork[];
}

const allWorks: ProcessedWork[] = WORKS.flatMap((category: Category) => {
  if (category.works) {
    return category.works.map((work) => ({
      ...work,
      categorySlug: category.slug,
      categoryTitle: category.title,
    }));
  }

  if (category.collections) {
    return category.collections.flatMap((collection) =>
      collection.works.map((work) => ({
        ...work,
        categorySlug: category.slug,
        categoryTitle: category.title,
        collectionSlug: collection.slug,
        collectionTitle: collection.title,
      })),
    );
  }

  return [];
});

const MAX_ITEMS_PER_CATEGORY = 9;

const gallery: GallerySection[] = WORKS.map((category: Category) => ({
  id: category.slug,
  title: category.title,
  items: allWorks
    .filter((work) => work.categorySlug === category.slug)
    .slice(0, MAX_ITEMS_PER_CATEGORY),
})).filter((section) => section.items.length > 0);
---

<section class="hero">
  <div class="slider-wrapper">
    <SliderHero />
  </div>

  <div class="content">
    <Socials />

    <div class="gallery-sections">
      {
        gallery.map(({ id, title, items }, sectionIndex) => (
          <section id={id} class="gallery reveal">
            <h2 class="gallery-title">{title}</h2>

            <div class="grid reveal-stagger">
              {items.map((work, index) => {
                const imageUrl = work.imageUrls?.[0]
                  ? processImageUrl(work.imageUrls[0])
                  : "";
                const isAboveFold = sectionIndex === 0 && index < 3;
                const collection = work.collectionTitle || work.categoryTitle;

                return (
                  <a href={`/works/${work.slug}`} class="card reveal">
                    {imageUrl ? (
                      <img
                        src={imageUrl}
                        alt={work.title}
                        width="400"
                        height="400"
                        loading={isAboveFold ? "eager" : "lazy"}
                        decoding="async"
                        class="card-img"
                      />
                    ) : (
                      <div class="card-empty">{work.title}</div>
                    )}

                    <div class="card-overlay" />

                    <div class="card-content">
                      <span class="card-collection">{collection}</span>
                      <h3 class="card-title">{work.title}</h3>
                    </div>
                  </a>
                );
              })}
            </div>

            <div class="gallery-cta reveal">
              <Cta
                href={`/works/${id}`}
                label={`View All ${title}`}
                isDark={true}
              />
            </div>
          </section>
        ))
      }
    </div>

    <ContactBanner />
  </div>
</section>

<style>
  .hero {
    width: 100%;
  }

  .slider-wrapper {
    width: 100%;
    padding: 0 1rem;
  }

  .content {
    width: 100%;
    padding: 0 1rem;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 4rem;
  }

  .gallery-sections {
    display: flex;
    flex-direction: column;
    gap: 5rem;
    width: 100%;
  }

  .gallery {
    width: 100%;
    max-width: 1280px;
    margin: 0 auto;
  }

  .gallery-title {
    font-size: clamp(1.75rem, 5vw, 2.5rem);
    font-weight: 500;
    letter-spacing: -0.03em;
    color: #000;
    text-align: center;
    margin-bottom: 2.5rem;
  }

  .grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 3px;
  }

  /* Card */
  .card {
    position: relative;
    display: block;
    aspect-ratio: 1;
    overflow: hidden;
    background: #111;
    text-decoration: none;
  }

  .card-img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition:
      transform 0.8s cubic-bezier(0.16, 1, 0.3, 1),
      opacity 0.5s ease;
  }

  .card:hover .card-img {
    transform: scale(1.1);
    opacity: 0.4;
  }

  .card-empty {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 0.875rem;
    color: #666;
    background: #f0f0f0;
  }

  /* Overlay */
  .card-overlay {
    position: absolute;
    inset: 0;
    background: black;
    opacity: 0;
    transition: opacity 0.5s ease;
  }

  .card:hover .card-overlay {
    opacity: 0.5;
  }

  /* Content */
  .card-content {
    position: absolute;
    inset: 0;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 1.5rem;
    text-align: center;
    opacity: 0;
    transition: opacity 0.4s ease;
  }

  .card:hover .card-content,
  .card:focus-visible .card-content {
    opacity: 1;
  }

  .card-collection {
    font-size: 0.6875rem;
    font-weight: 600;
    letter-spacing: 0.2em;
    text-transform: uppercase;
    color: rgba(255, 255, 255, 0.7);
    margin-bottom: 0.75rem;
    transform: translateY(15px);
    transition: transform 0.5s cubic-bezier(0.16, 1, 0.3, 1) 0.1s;
  }

  .card:hover .card-collection {
    transform: translateY(0);
  }

  .card-title {
    font-size: clamp(1.25rem, 4vw, 1.75rem);
    font-weight: 600;
    color: #fff;
    letter-spacing: -0.02em;
    line-height: 1.15;
    margin: 0;
    transform: translateY(15px);
    transition: transform 0.5s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .card:hover .card-title {
    transform: translateY(0);
  }

  .card:focus-visible {
    outline: 2px solid #000;
    outline-offset: 2px;
  }

  .card:focus-visible .card-collection,
  .card:focus-visible .card-title {
    transform: translateY(0);
  }

  .gallery-cta {
    text-align: center;
    margin-top: 2.5rem;
  }

  /* Responsive */
  @media (min-width: 640px) {
    .grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 4px;
    }
  }

  @media (min-width: 768px) {
    .slider-wrapper {
      padding: 1rem 1rem 4rem;
    }

    .content {
      gap: 5rem;
    }

    .gallery-sections {
      gap: 6rem;
    }

    .grid {
      gap: 6px;
    }

    .card-collection {
      font-size: 0.75rem;
      margin-bottom: 1rem;
    }
  }

  @media (min-width: 1024px) {
    .grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  /* Reduced motion */
  @media (prefers-reduced-motion: reduce) {
    .card-img,
    .card-overlay,
    .card-content,
    .card-collection,
    .card-title {
      transition: none;
    }

    .card:hover .card-img {
      transform: none;
    }

    .card-content {
      opacity: 1;
    }

    .card-collection,
    .card-title {
      transform: none;
    }
  }

  /* Print */
  @media print {
    .slider-wrapper,
    .card-overlay,
    .card-content {
      display: none;
    }
  }
</style>
