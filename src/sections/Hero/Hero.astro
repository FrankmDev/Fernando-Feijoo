const MAX_ITEMS_PER_CATEGORY = 9;

const gallery: GallerySection[] = WORKS.map((category: Category) => {
  // For prints category, use the specific items in exact order
  if (category.slug === "prints") {
    return {
      id: category.slug,
      title: category.title,
      items: PRINTS_ITEMS.slice(0, MAX_ITEMS_PER_CATEGORY),
    };
  }

  // For sketchbooks category, use the specific items in exact order
  if (category.slug === "sketchbooks") {
    return {
      id: category.slug,
      title: category.title,
      items: SKETCHBOOKS_ITEMS.slice(0, MAX_ITEMS_PER_CATEGORY),
    };
  }

  // For mixed-media category, use the specific items in exact order
  if (category.slug === "mixed-media") {
    return {
      id: category.slug,
      title: category.title,
      items: MIXED_MEDIA_ITEMS.slice(0, MAX_ITEMS_PER_CATEGORY),
    };
  }

  // For other categories, use the default logic
  let items: HeroItem[] = [];

  if (category.collections) {
    items = category.collections.map((collection) => {
      const imgPath = collection.works?.[0]?.imageUrls?.[0] || "";
      return {
        title: collection.title,
        subtitle: category.title,
        image: resolveImage(imgPath),
        fallbackImage: !resolveImage(imgPath)
          ? processImageUrl(imgPath)
          : undefined,
        href: `/works/${category.slug}/${collection.slug}`,
        isCollection: true,
      };
    });
  } else if (category.works) {
    items = category.works.map((work) => {
      const imgPath = work.imageUrls?.[0] || "";
      return {
        title: work.title,
        subtitle: category.title,
        image: resolveImage(imgPath),
        fallbackImage: !resolveImage(imgPath)
          ? processImageUrl(imgPath)
          : undefined,
        href: `/works/${work.slug}`,
        isCollection: false,
      };
    });
  }

  return {
    id: category.slug,
    title: category.title,
    items: items.slice(0, MAX_ITEMS_PER_CATEGORY),
  };
}).filter((section) => section.items.length > 0);
