---
import Header from "@sections/Header/Header.astro";
import Footer from "@sections/Footer/Footer.astro";
import { SITE_CONFIG } from "@constants";
import type { SeoMeta } from "@/types";
import { ClientRouter } from "astro:transitions";

interface Props extends SeoMeta {}

const {
  title,
  description = SITE_CONFIG.description,
  image = "/favicon.png",
  canonicalURL,
  noindex = false,
} = Astro.props;

const siteUrl = Astro.site?.toString() || SITE_CONFIG.url;
const currentUrl = canonicalURL || `${siteUrl}${Astro.url.pathname}`;
const imageUrl = image.startsWith("http") ? image : `${siteUrl}${image}`;

const structuredData = {
  "@context": "https://schema.org",
  "@type": "Person",
  name: SITE_CONFIG.name,
  jobTitle: "Artist & Printmaker",
  description: SITE_CONFIG.description,
  url: siteUrl,
  sameAs: [],
  knowsAbout: ["Printmaking", "Ceramics", "Drawing", "Mixed Media", "Artist Books"],
};
---

<!doctype html>
<html lang="en" prefix="og: http://ogp.me/ns#">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=5.0, viewport-fit=cover" />
    <meta name="generator" content={Astro.generator} />
    <meta http-equiv="Cache-Control" content="no-cache, no-store, must-revalidate" />
    <meta http-equiv="Pragma" content="no-cache" />
    <meta http-equiv="Expires" content="0" />

    <title>{title}</title>
    <meta name="title" content={title} />
    <meta name="description" content={description} />
    <meta name="author" content={SITE_CONFIG.author} />
    <meta name="keywords" content={SITE_CONFIG.keywords.join(", ")} />

    {noindex ? (
      <meta name="robots" content="noindex, nofollow" />
    ) : (
      <meta name="robots" content="index, follow" />
    )}

    <link rel="canonical" href={currentUrl} />

    <meta property="og:type" content="website" />
    <meta property="og:site_name" content={SITE_CONFIG.title} />
    <meta property="og:url" content={currentUrl} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={imageUrl} />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:locale" content="en_GB" />

    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={currentUrl} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={imageUrl} />

    <link rel="icon" type="image/png" sizes="32x32" href="/favicon.png" />
    <link rel="icon" type="image/avif" sizes="32x32" href="/favicon.avif" />
    <link rel="apple-touch-icon" sizes="180x180" href="/favicon.png" />
    <link rel="manifest" href="/site.webmanifest" />
    <meta name="theme-color" content="#000000" />

    <link rel="dns-prefetch" href="//fonts.googleapis.com" />
    <link rel="preload" href="/styles/general.css" as="style" />
    <link rel="preload" href="/Exo2-VariableFont_wght.woff2" as="font" type="font/woff2" crossorigin />
    <link rel="stylesheet" href="/styles/general.css" />

    <script type="application/ld+json" is:inline set:html={JSON.stringify(structuredData)} />
    <script src="../scripts/scroll-reveal.ts"></script>

    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="format-detection" content="telephone=no" />
    <meta http-equiv="X-Content-Type-Options" content="nosniff" />

    <!-- View Transitions -->
    <ClientRouter />
  </head>

  <body class="flex flex-col items-center min-w-0 max-w-[100vw] mx-auto min-h-screen bg-white text-gray-900">
    <a href="#main-content" class="sr-only focus:not-sr-only focus:fixed focus:top-4 focus:left-4 focus:z-50 bg-black text-white px-4 py-2">
      Skip to main content
    </a>

    <Header transition:persist />

    <main id="main-content" class="flex-1 w-full" role="main">
      <slot />
    </main>

    <Footer transition:persist />
  </body>
</html>

<style is:global>
  .sr-only {
    position: absolute;
    width: 1px;
    height: 1px;
    padding: 0;
    margin: -1px;
    overflow: hidden;
    clip: rect(0, 0, 0, 0);
    white-space: nowrap;
    border: 0;
  }

  .sr-only:focus {
    position: static;
    width: auto;
    height: auto;
    padding: inherit;
    margin: inherit;
    overflow: visible;
    clip: auto;
    white-space: normal;
  }

  html {
    scroll-behavior: smooth;
  }

  :focus {
    outline: 2px solid #3b82f6;
    outline-offset: 2px;
  }

  @media print {
    body { max-width: none; margin: 0; padding: 1rem; }
    header, footer { display: none; }
    img { max-width: 100% !important; height: auto !important; }
    h1, h2, h3 { break-after: avoid; }
  }

  @media (prefers-contrast: high) {
    body { background: white; color: black; }
  }

  @media (prefers-reduced-motion: reduce) {
    html { scroll-behavior: auto; }
    *, *::before, *::after {
      animation-duration: 0.01ms !important;
      animation-iteration-count: 1 !important;
      transition-duration: 0.01ms !important;
      scroll-behavior: auto !important;
    }
    
    ::view-transition-old(*),
    ::view-transition-new(*) {
      animation: none !important;
    }
  }

  /* ===== SMOOTH & FAST PAGE TRANSITIONS ===== */
  
  /* Prevenir interacciones durante la transición */
  ::view-transition {
    pointer-events: none;
  }

  /* Old page - fade out rápido y suave */
  ::view-transition-old(root) {
    animation: fade-out 0.15s cubic-bezier(0.4, 0, 1, 1) forwards;
  }

  /* New page - fade in suave con leve elevación */
  ::view-transition-new(root) {
    animation: fade-in 0.25s cubic-bezier(0, 0, 0.2, 1) forwards;
  }

  @keyframes fade-out {
    from { 
      opacity: 1; 
    }
    to { 
      opacity: 0; 
    }
  }

  @keyframes fade-in {
    from { 
      opacity: 0;
      transform: translateY(4px);
    }
    to { 
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* Elementos persistentes - sin animación alguna */
  ::view-transition-old(header),
  ::view-transition-new(header),
  ::view-transition-old(footer),
  ::view-transition-new(footer) {
    animation: none !important;
  }

  /* Asegurar que header y footer mantengan su posición */
  ::view-transition-group(header),
  ::view-transition-group(footer) {
    z-index: 100;
  }

  /* Optimización de rendimiento */
  ::view-transition-image-pair(root) {
    isolation: auto;
  }
</style>

<script>
  // Asegurar visibilidad del body tras transiciones
  document.addEventListener('astro:page-load', () => {
    document.body.style.opacity = '1';
  });
  
  // Prevenir flash de contenido sin estilos
  document.addEventListener('astro:after-swap', () => {
    document.body.style.opacity = '1';
  });
</script>
